{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "$id": "https://hamlet.io/schema/latest/blueprint/reference-testprofile-schema.json",
  "definitions": {
    "TestProfile": {
      "type": "object",
      "patternProperties": {
        "^[A-Za-z_][A-Za-z0-9_]*$": {
          "properties": {
            "*": {
              "type": "object",
              "additionalProperties": false,
              "description": "The component type the profile applies to",
              "properties": {
                "TestCases": {
                  "type": "array",
                  "contains": {
                    "type": "string"
                  }
                }
              }
            }
          },
          "additionalProperties": false
        }
      }
    }
  }
}
