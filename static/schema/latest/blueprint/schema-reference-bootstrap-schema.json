{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "$id": "https://hamlet.io/schema/latest/blueprint/reference-bootstrap-schema.json",
  "definitions": {
    "Bootstrap": {
      "type": "object",
      "patternProperties": {
        "^[A-Za-z_][A-Za-z0-9_]*$": {
          "properties": {
            "ScriptStore": {
              "type": "string"
            },
            "Prefix": {
              "type": "string"
            },
            "InitScript": {
              "type": "string"
            },
            "Packages": {
              "type": "object",
              "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": {
                  "properties": {
                    "Name": {
                      "type": "string"
                    },
                    "Version": {
                      "type": "string"
                    }
                  },
                  "additionalProperties": false
                }
              }
            },
            "Index": {
              "type": "number",
              "description": "Determines script execution sequence."
            },
            "Type": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "Name": {
                  "type": "string"
                },
                "HandlerVersion": {
                  "type": "string"
                }
              }
            },
            "Publisher": {
              "type": "string"
            },
            "AutoUpgradeOnMinorVersion": {
              "type": "boolean"
            },
            "Settings": {
              "type": "object",
              "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": {
                  "properties": {
                    "Key": {
                      "type": "string"
                    },
                    "Value": {
                      "type": "any"
                    }
                  },
                  "additionalProperties": false,
                  "required": [
                    "Key",
                    "Value"
                  ]
                }
              }
            },
            "ProtectedSettings": {
              "type": "object",
              "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": {
                  "properties": {
                    "Key": {
                      "type": "string"
                    },
                    "Value": {
                      "type": "any"
                    }
                  },
                  "additionalProperties": false,
                  "required": [
                    "Key",
                    "Value"
                  ]
                }
              }
            }
          },
          "additionalProperties": false
        }
      }
    }
  }
}
