{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "$id": "https://hamlet.io/schema/latest/blueprint/component-mtarule-schema.json",
  "definitions": {
    "mtarule": {
      "type": "object",
      "patternProperties": {
        "^[A-Za-z_][A-Za-z0-9_]*$": {
          "properties": {
            "Enabled": {
              "type": "boolean",
              "description": "Permit the rule to be considered",
              "default": true
            },
            "Order": {
              "type": "number",
              "description": "The order in which rules are checked. Lower is checked earlier",
              "default": 100
            },
            "Conditions": {
              "type": "object",
              "additionalProperties": false,
              "description": "Conditions that must be met for the rule to fire. Conditions are ANDed together",
              "properties": {
                "Recipients": {
                  "type": "array",
                  "contains": {
                    "type": "string"
                  },
                  "description": "Expected To addresses"
                }
              }
            },
            "Action": {
              "type": "string",
              "enum": [
                "forward",
                "drop"
              ]
            },
            "Links": {
              "$ref": "https://hamlet.io/schema/latest/blueprint/schema-attributeset-schema.json#/link"
            },
            "Profiles": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "Deployment": {
                  "type": "array",
                  "contains": {
                    "type": "string"
                  }
                },
                "Policy": {
                  "type": "array",
                  "contains": {
                    "type": "string"
                  }
                },
                "Placement": {
                  "type": "string",
                  "default": "default"
                },
                "Baseline": {
                  "type": "string",
                  "description": "The profile used to lookup standard services provided by the segment baseline",
                  "default": "default"
                },
                "Testing": {
                  "type": "array",
                  "contains": {
                    "type": "string"
                  },
                  "description": "The testing profiles to apply to the component"
                }
              }
            },
            "SettingNamespaces": {
              "type": "object",
              "description": "Additional namespaces to use during settings lookups",
              "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": {
                  "properties": {
                    "Match": {
                      "type": "string",
                      "description": "How to match the namespace with available settings",
                      "default": "exact",
                      "enum": [
                        "exact",
                        "partial"
                      ]
                    },
                    "Order": {
                      "type": "array",
                      "contains": {
                        "type": "string"
                      },
                      "default": [
                        "Tier",
                        "Component",
                        "Type",
                        "SubComponent",
                        "Instance",
                        "Version",
                        "Name"
                      ]
                    },
                    "IncludeInNamespace": {
                      "type": "object",
                      "additionalProperties": false,
                      "properties": {
                        "Tier": {
                          "type": "boolean",
                          "default": true
                        },
                        "Component": {
                          "type": "boolean",
                          "default": true
                        },
                        "Type": {
                          "type": "boolean",
                          "default": false
                        },
                        "SubComponent": {
                          "type": "boolean",
                          "default": false
                        },
                        "Instance": {
                          "type": "boolean",
                          "default": true
                        },
                        "Version": {
                          "type": "boolean",
                          "default": true
                        },
                        "Name": {
                          "type": "boolean",
                          "default": false
                        }
                      }
                    },
                    "Name": {
                      "type": "string"
                    }
                  },
                  "additionalProperties": false
                }
              }
            },
            "Export": {
              "type": "array",
              "contains": {
                "type": "string"
              }
            },
            "DeploymentUnits": {
              "type": "array",
              "contains": {
                "type": "string"
              }
            },
            "aws:Prefix": {
              "type": "string",
              "description": "Prefix when saving to an S3 bucket"
            },
            "aws:Encryption": {
              "type": "string",
              "additionalProperties": false,
              "description": "Details of message encryption",
              "properties": {
                "Enabled": {
                  "type": "boolean",
                  "default": false
                }
              }
            }
          },
          "additionalProperties": false,
          "required": [
            "Action"
          ]
        }
      }
    }
  }
}
