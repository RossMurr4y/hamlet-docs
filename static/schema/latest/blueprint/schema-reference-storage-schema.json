{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "$id": "https://hamlet.io/schema/latest/blueprint/reference-storage-schema.json",
  "definitions": {
    "Storage": {
      "type": "object",
      "patternProperties": {
        "^[A-Za-z_][A-Za-z0-9_]*$": {
          "properties": {
            "*": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "Volumes": {
                  "type": "object",
                  "patternProperties": {
                    "^[A-Za-z_][A-Za-z0-9_]*$": {
                      "properties": {
                        "Device": {
                          "type": "string"
                        },
                        "Size": {
                          "type": "number"
                        },
                        "Type": {
                          "type": "string",
                          "default": "gp2"
                        },
                        "Iops": {
                          "type": "number"
                        }
                      },
                      "additionalProperties": false,
                      "required": [
                        "Device",
                        "Size"
                      ]
                    }
                  }
                }
              }
            }
          },
          "additionalProperties": false
        }
      }
    }
  }
}
