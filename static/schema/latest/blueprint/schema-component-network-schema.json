{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "$id": "https://hamlet.io/schema/latest/blueprint/component-network-schema.json",
  "definitions": {
    "network": {
      "type": "object",
      "patternProperties": {
        "^[A-Za-z_][A-Za-z0-9_]*$": {
          "properties": {
            "Active": {
              "type": "boolean",
              "default": false
            },
            "Logging": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "EnableFlowLogs": {
                  "type": "boolean",
                  "description": "Deprecated: Please use FlowLogs",
                  "default": true
                },
                "FlowLogs": {
                  "type": "object",
                  "description": "Log flows across the network",
                  "patternProperties": {
                    "^[A-Za-z_][A-Za-z0-9_]*$": {
                      "properties": {
                        "Action": {
                          "type": "string",
                          "description": "The action to capture in the flow log",
                          "enum": [
                            "accept",
                            "reject",
                            "any"
                          ]
                        },
                        "DestinationType": {
                          "type": "string",
                          "description": "The destination type to send the logs to",
                          "default": "s3",
                          "enum": [
                            "log",
                            "s3"
                          ]
                        },
                        "s3": {
                          "type": "object",
                          "additionalProperties": false,
                          "description": "s3 specific destination configuration",
                          "properties": {
                            "Link": {
                              "type": "object",
                              "additionalProperties": false,
                              "description": "A link to the s3 bucket destination",
                              "properties": {
                                "Any": {
                                  "type": "string"
                                },
                                "Tenant": {
                                  "type": "string"
                                },
                                "Product": {
                                  "type": "string"
                                },
                                "Environment": {
                                  "type": "string"
                                },
                                "Segment": {
                                  "type": "string"
                                },
                                "Tier": {
                                  "type": "string"
                                },
                                "Component": {
                                  "type": "string"
                                },
                                "Function": {
                                  "type": "string"
                                },
                                "Service": {
                                  "type": "string"
                                },
                                "Task": {
                                  "type": "string"
                                },
                                "PortMapping": {
                                  "type": "string"
                                },
                                "Mount": {
                                  "type": "string"
                                },
                                "Platform": {
                                  "type": "string"
                                },
                                "RouteTable": {
                                  "type": "string"
                                },
                                "NetworkACL": {
                                  "type": "string"
                                },
                                "DataBucket": {
                                  "type": "string"
                                },
                                "Key": {
                                  "type": "string"
                                },
                                "Branch": {
                                  "type": "string"
                                },
                                "Client": {
                                  "type": "string"
                                },
                                "Connection": {
                                  "type": "string"
                                },
                                "AuthProvider": {
                                  "type": "string"
                                },
                                "Resource": {
                                  "type": "string"
                                },
                                "DataFeed": {
                                  "type": "string"
                                },
                                "RegistryService": {
                                  "type": "string"
                                },
                                "Assignment": {
                                  "type": "string"
                                },
                                "Route": {
                                  "type": "string"
                                },
                                "Endpoint": {
                                  "type": "string"
                                },
                                "Instance": {
                                  "type": "string"
                                },
                                "Version": {
                                  "type": "string"
                                },
                                "Secret": {
                                  "type": "string"
                                },
                                "Rule": {
                                  "type": "string"
                                },
                                "Role": {
                                  "type": "string"
                                },
                                "Direction": {
                                  "type": "string"
                                },
                                "Type": {
                                  "type": "string"
                                },
                                "Enabled": {
                                  "type": "boolean",
                                  "default": true
                                },
                                "IncludeInContext": {
                                  "type": "array",
                                  "contains": {
                                    "type": "string"
                                  }
                                }
                              },
                              "required": [
                                "Tier",
                                "Component"
                              ]
                            },
                            "Prefix": {
                              "type": "string",
                              "description": "A prefix for the s3 bucket destination",
                              "default": "FlowLogs/"
                            }
                          }
                        }
                      },
                      "additionalProperties": false,
                      "required": [
                        "Action"
                      ]
                    }
                  }
                }
              }
            },
            "DNS": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "UseProvider": {
                  "type": "boolean",
                  "default": true
                },
                "GenerateHostNames": {
                  "type": "boolean",
                  "default": true
                }
              }
            },
            "Address": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "CIDR": {
                  "type": "string",
                  "default": "10.0.0.0/16"
                }
              }
            },
            "Links": {
              "type": "object",
              "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": {
                  "properties": {
                    "Any": {
                      "type": "string"
                    },
                    "Tenant": {
                      "type": "string"
                    },
                    "Product": {
                      "type": "string"
                    },
                    "Environment": {
                      "type": "string"
                    },
                    "Segment": {
                      "type": "string"
                    },
                    "Tier": {
                      "type": "string"
                    },
                    "Component": {
                      "type": "string"
                    },
                    "Function": {
                      "type": "string"
                    },
                    "Service": {
                      "type": "string"
                    },
                    "Task": {
                      "type": "string"
                    },
                    "PortMapping": {
                      "type": "string"
                    },
                    "Mount": {
                      "type": "string"
                    },
                    "Platform": {
                      "type": "string"
                    },
                    "RouteTable": {
                      "type": "string"
                    },
                    "NetworkACL": {
                      "type": "string"
                    },
                    "DataBucket": {
                      "type": "string"
                    },
                    "Key": {
                      "type": "string"
                    },
                    "Branch": {
                      "type": "string"
                    },
                    "Client": {
                      "type": "string"
                    },
                    "Connection": {
                      "type": "string"
                    },
                    "AuthProvider": {
                      "type": "string"
                    },
                    "Resource": {
                      "type": "string"
                    },
                    "DataFeed": {
                      "type": "string"
                    },
                    "RegistryService": {
                      "type": "string"
                    },
                    "Assignment": {
                      "type": "string"
                    },
                    "Route": {
                      "type": "string"
                    },
                    "Endpoint": {
                      "type": "string"
                    },
                    "Instance": {
                      "type": "string"
                    },
                    "Version": {
                      "type": "string"
                    },
                    "Secret": {
                      "type": "string"
                    },
                    "Rule": {
                      "type": "string"
                    },
                    "Role": {
                      "type": "string"
                    },
                    "Direction": {
                      "type": "string"
                    },
                    "Type": {
                      "type": "string"
                    },
                    "Enabled": {
                      "type": "boolean",
                      "default": true
                    },
                    "IncludeInContext": {
                      "type": "array",
                      "contains": {
                        "type": "string"
                      }
                    }
                  },
                  "additionalProperties": false,
                  "required": [
                    "Tier",
                    "Component"
                  ]
                }
              }
            },
            "Profiles": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "Deployment": {
                  "type": "array",
                  "contains": {
                    "type": "string"
                  }
                },
                "Policy": {
                  "type": "array",
                  "contains": {
                    "type": "string"
                  }
                },
                "Placement": {
                  "type": "string",
                  "default": "default"
                },
                "Baseline": {
                  "type": "string",
                  "description": "The profile used to lookup standard services provided by the segment baseline",
                  "default": "default"
                },
                "Testing": {
                  "type": "array",
                  "contains": {
                    "type": "string"
                  },
                  "description": "The testing profiles to apply to the component"
                },
                "Logging": {
                  "type": "string",
                  "default": "default"
                }
              }
            },
            "SettingNamespaces": {
              "type": "object",
              "description": "Additional namespaces to use during settings lookups",
              "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": {
                  "properties": {
                    "Match": {
                      "type": "string",
                      "description": "How to match the namespace with available settings",
                      "default": "exact",
                      "enum": [
                        "exact",
                        "partial"
                      ]
                    },
                    "Order": {
                      "type": "array",
                      "contains": {
                        "type": "string"
                      },
                      "default": [
                        "Tier",
                        "Component",
                        "Type",
                        "SubComponent",
                        "Instance",
                        "Version",
                        "Name"
                      ]
                    },
                    "IncludeInNamespace": {
                      "type": "object",
                      "additionalProperties": false,
                      "properties": {
                        "Tier": {
                          "type": "boolean",
                          "default": true
                        },
                        "Component": {
                          "type": "boolean",
                          "default": true
                        },
                        "Type": {
                          "type": "boolean",
                          "default": false
                        },
                        "SubComponent": {
                          "type": "boolean",
                          "default": false
                        },
                        "Instance": {
                          "type": "boolean",
                          "default": true
                        },
                        "Version": {
                          "type": "boolean",
                          "default": true
                        },
                        "Name": {
                          "type": "boolean",
                          "default": false
                        }
                      }
                    },
                    "Name": {
                      "type": "string"
                    }
                  },
                  "additionalProperties": false
                }
              }
            },
            "Export": {
              "type": "array",
              "contains": {
                "type": "string"
              }
            },
            "DeploymentUnits": {
              "type": "array",
              "contains": {
                "type": "string"
              }
            },
            "RouteTables": {
              "$ref": "#/definitions/networkroute"
            },
            "NetworkACLs": {
              "$ref": "#/definitions/networkacl"
            }
          },
          "additionalProperties": false
        }
      }
    }
  }
}
