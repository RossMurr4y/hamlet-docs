{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "$id": "https://docs.hamlet.io/schema/latest/blueprint/schema-reference-category-schema.json",
  "definitions": {
    "Category": {
      "type": "object",
      "patternProperties": {
        "^[A-Za-z_][A-Za-z0-9_]*$": {
          "properties": {
            "Id": {
              "type": "string"
            },
            "Name": {
              "type": "string"
            },
            "Title": {
              "type": "string"
            },
            "Description": {
              "type": "string"
            }
          },
          "additionalProperties": false
        }
      }
    }
  }
}
