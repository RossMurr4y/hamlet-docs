{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "$id": "https://hamlet.io/schema/latest/blueprint/component-cache-schema.json",
  "definitions": {
    "cache": {
      "type": "object",
      "patternProperties": {
        "^[A-Za-z_][A-Za-z0-9_]*$": {
          "properties": {
            "Engine": {
              "type": "string"
            },
            "EngineVersion": {
              "type": "string"
            },
            "Port": {
              "type": "string"
            },
            "IPAddressGroups": {
              "type": "array",
              "contains": {
                "type": "string"
              },
              "default": [
                "_localnet"
              ]
            },
            "Links": {
              "$ref": "https://hamlet.io/schema/latest/blueprint/schema-attributeset-schema.json#/link"
            },
            "Backup": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "RetentionPeriod": {
                  "type": "string"
                }
              }
            },
            "Hibernate": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "Enabled": {
                  "type": "boolean",
                  "default": false
                },
                "StartUpMode": {
                  "type": "string",
                  "default": "replace",
                  "enum": [
                    "replace"
                  ]
                }
              }
            },
            "Alerts": {
              "type": "object",
              "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": {
                  "properties": {
                    "Namespace": {
                      "type": "string"
                    },
                    "DimensionSource": {
                      "type": "string",
                      "description": "The source of the alert dimensions - resource lookup or explicit configuration",
                      "default": "Resource",
                      "enum": [
                        "Resource",
                        "Configured"
                      ]
                    },
                    "Resource": {
                      "type": "object",
                      "additionalProperties": false,
                      "description": "Provide a component resource to determine the dimensions of the metric",
                      "properties": {
                        "Id": {
                          "type": "string"
                        },
                        "Type": {
                          "type": "string"
                        }
                      }
                    },
                    "Dimensions": {
                      "type": "object",
                      "description": "Explicit configured dimensions",
                      "patternProperties": {
                        "^[A-Za-z_][A-Za-z0-9_]*$": {
                          "properties": {
                            "Key": {
                              "type": "string",
                              "description": "The Key of the dimension"
                            },
                            "Value": {
                              "type": "string",
                              "description": "The value of the dimension to match"
                            },
                            "SettingEnvName": {
                              "type": "string",
                              "description": "A setting name as env that will provide the dimension value"
                            }
                          },
                          "additionalProperties": false
                        }
                      }
                    },
                    "Metric": {
                      "type": "string"
                    },
                    "Statistic": {
                      "type": "string",
                      "default": "Sum"
                    },
                    "Description": {
                      "type": "string"
                    },
                    "Name": {
                      "type": "string"
                    },
                    "Threshold": {
                      "type": "number",
                      "default": 1
                    },
                    "Severity": {
                      "type": "string",
                      "default": "info",
                      "enum": [
                        "debug",
                        "info",
                        "warn",
                        "error",
                        "fatal"
                      ]
                    },
                    "Comparison": {
                      "type": "string",
                      "default": "Threshold"
                    },
                    "Operator": {
                      "type": "string",
                      "default": "GreaterThanOrEqualToThreshold"
                    },
                    "Time": {
                      "type": "number",
                      "default": 300
                    },
                    "Periods": {
                      "type": "number",
                      "default": 1
                    },
                    "ReportOk": {
                      "type": "boolean",
                      "default": false
                    },
                    "MissingData": {
                      "type": "string",
                      "default": "notBreaching"
                    },
                    "Unit": {
                      "type": "string",
                      "default": "Count"
                    }
                  },
                  "additionalProperties": false,
                  "required": [
                    "Metric",
                    "Name"
                  ]
                }
              }
            },
            "Profiles": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "Deployment": {
                  "type": "array",
                  "contains": {
                    "type": "string"
                  }
                },
                "Policy": {
                  "type": "array",
                  "contains": {
                    "type": "string"
                  }
                },
                "Placement": {
                  "type": "string",
                  "default": "default"
                },
                "Baseline": {
                  "type": "string",
                  "description": "The profile used to lookup standard services provided by the segment baseline",
                  "default": "default"
                },
                "Testing": {
                  "type": "array",
                  "contains": {
                    "type": "string"
                  },
                  "description": "The testing profiles to apply to the component"
                },
                "Processor": {
                  "type": "string",
                  "default": "default"
                },
                "Alert": {
                  "type": "string",
                  "default": "default"
                },
                "Network": {
                  "type": "string",
                  "default": "default"
                }
              }
            },
            "SettingNamespaces": {
              "type": "object",
              "description": "Additional namespaces to use during settings lookups",
              "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": {
                  "properties": {
                    "Match": {
                      "type": "string",
                      "description": "How to match the namespace with available settings",
                      "default": "exact",
                      "enum": [
                        "exact",
                        "partial"
                      ]
                    },
                    "Order": {
                      "type": "array",
                      "contains": {
                        "type": "string"
                      },
                      "default": [
                        "Tier",
                        "Component",
                        "Type",
                        "SubComponent",
                        "Instance",
                        "Version",
                        "Name"
                      ]
                    },
                    "IncludeInNamespace": {
                      "type": "object",
                      "additionalProperties": false,
                      "properties": {
                        "Tier": {
                          "type": "boolean",
                          "default": true
                        },
                        "Component": {
                          "type": "boolean",
                          "default": true
                        },
                        "Type": {
                          "type": "boolean",
                          "default": false
                        },
                        "SubComponent": {
                          "type": "boolean",
                          "default": false
                        },
                        "Instance": {
                          "type": "boolean",
                          "default": true
                        },
                        "Version": {
                          "type": "boolean",
                          "default": true
                        },
                        "Name": {
                          "type": "boolean",
                          "default": false
                        }
                      }
                    },
                    "Name": {
                      "type": "string"
                    }
                  },
                  "additionalProperties": false
                }
              }
            },
            "Export": {
              "type": "array",
              "contains": {
                "type": "string"
              }
            },
            "DeploymentUnits": {
              "type": "array",
              "contains": {
                "type": "string"
              }
            }
          },
          "additionalProperties": false,
          "required": [
            "Engine"
          ]
        }
      }
    }
  }
}
