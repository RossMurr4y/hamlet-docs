{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "$id": "https://docs.hamlet.io/schema/latest/blueprint/schema-component-spa-schema.json",
  "definitions": {
    "spa": {
      "type": "object",
      "patternProperties": {
        "^[A-Za-z_][A-Za-z0-9_]*$": {
          "properties": {
            "Extensions": {
              "type": "array",
              "contains": {
                "type": "string"
              },
              "description": "Extensions to invoke as part of component processing"
            },
            "Links": {
              "$ref": "https://docs.hamlet.io/schema/latest/blueprint/schema-attributeset-link-schema.json"
            },
            "InvalidateOnUpdate": {
              "type": "boolean",
              "description": "Invalidate all CDNs that host this content",
              "default": true
            },
            "ConfigPathPattern": {
              "type": "string",
              "description": "The CDN pattern used to access the config",
              "default": "config/*"
            },
            "ConfigPath": {
              "type": "string",
              "description": "The path appended to files that will be used for config",
              "default": "config"
            },
            "Port": {
              "type": "object",
              "additionalProperties": false,
              "description": "The port used to access the SPA content.",
              "properties": {
                "HTTP": {
                  "type": "string",
                  "default": "http"
                },
                "HTTPS": {
                  "type": "string",
                  "default": "https"
                }
              }
            },
            "Image": {
              "type": "object",
              "additionalProperties": false,
              "description": "Control the source of the image that is used for the function",
              "properties": {
                "Source": {
                  "type": "string",
                  "description": "The source of the image - registry is the hamlet registry",
                  "default": "registry",
                  "enum": [
                    "registry",
                    "url"
                  ]
                },
                "UrlSource": {
                  "type": "object",
                  "additionalProperties": false,
                  "description": "Url Source specific Configuration",
                  "properties": {
                    "Url": {
                      "type": "string",
                      "description": "The Url to the lambda zip file"
                    },
                    "ImageHash": {
                      "type": "string",
                      "description": "The expected sha1 hash of the Url if empty any will be accepted"
                    }
                  }
                }
              },
              "required": [
                "Source"
              ]
            },
            "Profiles": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "Deployment": {
                  "type": "array",
                  "contains": {
                    "type": "string"
                  }
                },
                "Policy": {
                  "type": "array",
                  "contains": {
                    "type": "string"
                  }
                },
                "Placement": {
                  "type": "string",
                  "default": "default"
                },
                "Baseline": {
                  "type": "string",
                  "description": "The profile used to lookup standard services provided by the segment baseline",
                  "default": "default"
                },
                "Testing": {
                  "type": "array",
                  "contains": {
                    "type": "string"
                  },
                  "description": "The testing profiles to apply to the component"
                }
              }
            },
            "SettingNamespaces": {
              "type": "object",
              "description": "Additional namespaces to use during settings lookups",
              "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": {
                  "properties": {
                    "Match": {
                      "type": "string",
                      "description": "How to match the namespace with available settings",
                      "default": "exact",
                      "enum": [
                        "exact",
                        "partial"
                      ]
                    },
                    "Order": {
                      "type": "array",
                      "contains": {
                        "type": "string"
                      },
                      "default": [
                        "Tier",
                        "Component",
                        "Type",
                        "SubComponent",
                        "Instance",
                        "Version",
                        "Name"
                      ]
                    },
                    "IncludeInNamespace": {
                      "type": "object",
                      "additionalProperties": false,
                      "properties": {
                        "Tier": {
                          "type": "boolean",
                          "default": true
                        },
                        "Component": {
                          "type": "boolean",
                          "default": true
                        },
                        "Type": {
                          "type": "boolean",
                          "default": false
                        },
                        "SubComponent": {
                          "type": "boolean",
                          "default": false
                        },
                        "Instance": {
                          "type": "boolean",
                          "default": true
                        },
                        "Version": {
                          "type": "boolean",
                          "default": true
                        },
                        "Name": {
                          "type": "boolean",
                          "default": false
                        }
                      }
                    },
                    "Name": {
                      "type": "string"
                    }
                  },
                  "additionalProperties": false
                }
              }
            },
            "Export": {
              "type": "array",
              "contains": {
                "type": "string"
              }
            },
            "DeploymentUnits": {
              "type": "array",
              "contains": {
                "type": "string"
              }
            }
          },
          "additionalProperties": false
        }
      }
    }
  }
}
