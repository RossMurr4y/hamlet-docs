{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "$id": "https://hamlet.io/schema/latest/blueprint/reference-servicerole-schema.json",
  "definitions": {
    "ServiceRole": {
      "type": "object",
      "patternProperties": {
        "^[A-Za-z_][A-Za-z0-9_]*$": {
          "properties": {
            "Enabled": {
              "type": "boolean",
              "default": true
            },
            "ServiceName": {
              "type": "string",
              "description": "The Service domain name for the service you want to create the role for"
            },
            "Description": {
              "type": "string",
              "description": "A description to include as part of the Role"
            }
          },
          "additionalProperties": false
        }
      }
    }
  }
}
