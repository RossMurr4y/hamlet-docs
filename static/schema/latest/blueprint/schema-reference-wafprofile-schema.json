{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "$id": "https://docs.hamlet.io/schema/latest/blueprint/schema-reference-wafprofile-schema.json",
  "definitions": {
    "WAFProfile": {
      "type": "object",
      "patternProperties": {
        "^[A-Za-z_][A-Za-z0-9_]*$": {
          "properties": {
            "Rules": {
              "type": "array",
              "contains": {
                "type": "object"
              }
            },
            "DefaultAction": {
              "type": "string",
              "enum": [
                "ALLOW",
                "BLOCK"
              ]
            }
          },
          "additionalProperties": false
        }
      }
    }
  }
}
