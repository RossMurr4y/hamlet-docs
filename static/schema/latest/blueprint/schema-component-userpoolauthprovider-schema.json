{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "$id": "https://hamlet.io/schema/latest/blueprint/component-userpoolauthprovider-schema.json",
  "definitions": {
    "userpoolauthprovider": {
      "type": "object",
      "patternProperties": {
        "^[A-Za-z_][A-Za-z0-9_]*$": {
          "properties": {
            "Engine": {
              "type": "string",
              "description": "The authentication provider type",
              "enum": [
                "SAML",
                "OIDC",
                "Facebook",
                "Google",
                "Apple",
                "Amazon"
              ]
            },
            "SettingsPrefix": {
              "type": "string",
              "description": "A prefix to use for this providers settings lookup"
            },
            "EncryptionScheme": {
              "type": "string",
              "default": "base64:"
            },
            "AttributeMappings": {
              "type": "object",
              "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": {
                  "properties": {
                    "UserPoolAttribute": {
                      "type": "string",
                      "description": "The name of the attribute in the user pool schema - the id of the mapping will be used if not provided"
                    },
                    "ProviderAttribute": {
                      "type": "string",
                      "description": "The provider attribute which will be mapped"
                    }
                  },
                  "additionalProperties": false,
                  "required": [
                    "ProviderAttribute"
                  ]
                }
              }
            },
            "IDPIdentifiers": {
              "type": "array",
              "contains": {
                "type": "string"
              },
              "description": "A list of identifiers that can be used to automatically pick the IDP - E.g. email domain"
            },
            "SAML": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "MetadataUrl": {
                  "type": "string",
                  "description": "The SAML metadataUrl endpoint"
                },
                "EnableIDPSignOut": {
                  "type": "boolean",
                  "description": "Enable the IDP Signout Flow",
                  "default": true
                }
              }
            },
            "OIDC": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "ClientId": {
                  "type": "string"
                },
                "ClientSecret": {
                  "type": "string"
                },
                "Scopes": {
                  "type": "array",
                  "contains": {
                    "type": "string"
                  },
                  "default": [
                    "openid",
                    "email"
                  ]
                },
                "AttributesHttpMethod": {
                  "type": "string",
                  "default": "GET",
                  "enum": [
                    "GET",
                    "POST"
                  ]
                },
                "Issuer": {
                  "type": "string"
                },
                "AuthorizeUrl": {
                  "type": "string"
                },
                "TokenUrl": {
                  "type": "string"
                },
                "AttributesUrl": {
                  "type": "string"
                },
                "JwksUrl": {
                  "type": "string"
                }
              }
            },
            "Facebook": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "ClientId": {
                  "type": "string"
                },
                "ClientSecret": {
                  "type": "string"
                },
                "Scopes": {
                  "type": "array",
                  "contains": {
                    "type": "string"
                  },
                  "default": [
                    "email",
                    "public_profile"
                  ]
                },
                "APIVersion": {
                  "type": "string"
                }
              }
            },
            "Amazon": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "ClientId": {
                  "type": "string"
                },
                "ClientSecret": {
                  "type": "string"
                },
                "Scopes": {
                  "type": "array",
                  "contains": {
                    "type": "string"
                  },
                  "default": [
                    "profile"
                  ]
                }
              }
            },
            "Google": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "ClientId": {
                  "type": "string"
                },
                "ClientSecret": {
                  "type": "string"
                },
                "Scopes": {
                  "type": "array",
                  "contains": {
                    "type": "string"
                  },
                  "default": [
                    "openid",
                    "profile",
                    "email"
                  ]
                }
              }
            },
            "Apple": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "ClientId": {
                  "type": "string"
                },
                "TeamId": {
                  "type": "string"
                },
                "KeyId": {
                  "type": "string"
                },
                "PrivateKey": {
                  "type": "string"
                },
                "Scopes": {
                  "type": "array",
                  "contains": {
                    "type": "string"
                  },
                  "default": [
                    "email",
                    "name"
                  ]
                }
              }
            },
            "Profiles": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "Deployment": {
                  "type": "array",
                  "contains": {
                    "type": "string"
                  }
                },
                "Policy": {
                  "type": "array",
                  "contains": {
                    "type": "string"
                  }
                },
                "Placement": {
                  "type": "string",
                  "default": "default"
                },
                "Baseline": {
                  "type": "string",
                  "description": "The profile used to lookup standard services provided by the segment baseline",
                  "default": "default"
                },
                "Testing": {
                  "type": "array",
                  "contains": {
                    "type": "string"
                  },
                  "description": "The testing profiles to apply to the component"
                }
              }
            },
            "SettingNamespaces": {
              "type": "object",
              "description": "Additional namespaces to use during settings lookups",
              "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": {
                  "properties": {
                    "Match": {
                      "type": "string",
                      "description": "How to match the namespace with available settings",
                      "default": "exact",
                      "enum": [
                        "exact",
                        "partial"
                      ]
                    },
                    "Order": {
                      "type": "array",
                      "contains": {
                        "type": "string"
                      },
                      "default": [
                        "Tier",
                        "Component",
                        "Type",
                        "SubComponent",
                        "Instance",
                        "Version",
                        "Name"
                      ]
                    },
                    "IncludeInNamespace": {
                      "type": "object",
                      "additionalProperties": false,
                      "properties": {
                        "Tier": {
                          "type": "boolean",
                          "default": true
                        },
                        "Component": {
                          "type": "boolean",
                          "default": true
                        },
                        "Type": {
                          "type": "boolean",
                          "default": false
                        },
                        "SubComponent": {
                          "type": "boolean",
                          "default": false
                        },
                        "Instance": {
                          "type": "boolean",
                          "default": true
                        },
                        "Version": {
                          "type": "boolean",
                          "default": true
                        },
                        "Name": {
                          "type": "boolean",
                          "default": false
                        }
                      }
                    },
                    "Name": {
                      "type": "string"
                    }
                  },
                  "additionalProperties": false
                }
              }
            },
            "Export": {
              "type": "array",
              "contains": {
                "type": "string"
              }
            },
            "DeploymentUnits": {
              "type": "array",
              "contains": {
                "type": "string"
              }
            }
          },
          "additionalProperties": false,
          "required": [
            "Engine"
          ]
        }
      }
    }
  }
}
