{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "$id": "https://docs.hamlet.io/schema/latest/blueprint/schema-component-networkacl-schema.json",
  "definitions": {
    "networkacl": {
      "type": "object",
      "patternProperties": {
        "^[A-Za-z_][A-Za-z0-9_]*$": {
          "properties": {
            "Active": {
              "type": "boolean",
              "default": false
            },
            "Rules": {
              "type": "object",
              "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": {
                  "properties": {
                    "Priority": {
                      "type": "number"
                    },
                    "Action": {
                      "type": "string",
                      "default": "deny",
                      "enum": [
                        "allow",
                        "deny"
                      ]
                    },
                    "Source": {
                      "type": "object",
                      "additionalProperties": false,
                      "description": "Source of the network traffic",
                      "properties": {
                        "IPAddressGroups": {
                          "type": "array",
                          "contains": {
                            "type": "string"
                          }
                        },
                        "Port": {
                          "type": "string",
                          "description": "Port or port range the source is coming from",
                          "default": "ephemeraltcp"
                        }
                      }
                    },
                    "Destination": {
                      "type": "object",
                      "additionalProperties": false,
                      "description": "Destination of the network traffic",
                      "properties": {
                        "IPAddressGroups": {
                          "type": "array",
                          "contains": {
                            "type": "string"
                          }
                        },
                        "Port": {
                          "type": "string",
                          "description": "Port or port range the source is trying to access"
                        }
                      }
                    },
                    "ReturnTraffic": {
                      "type": "boolean",
                      "description": "If ACL is stateless add a return rule",
                      "default": true
                    }
                  },
                  "additionalProperties": false
                }
              }
            },
            "Profiles": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "Deployment": {
                  "type": "array",
                  "contains": {
                    "type": "string"
                  }
                },
                "Policy": {
                  "type": "array",
                  "contains": {
                    "type": "string"
                  }
                },
                "Placement": {
                  "type": "string",
                  "default": "default"
                },
                "Baseline": {
                  "type": "string",
                  "description": "The profile used to lookup standard services provided by the segment baseline",
                  "default": "default"
                },
                "Testing": {
                  "type": "array",
                  "contains": {
                    "type": "string"
                  },
                  "description": "The testing profiles to apply to the component"
                }
              }
            },
            "SettingNamespaces": {
              "type": "object",
              "description": "Additional namespaces to use during settings lookups",
              "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": {
                  "properties": {
                    "Match": {
                      "type": "string",
                      "description": "How to match the namespace with available settings",
                      "default": "exact",
                      "enum": [
                        "exact",
                        "partial"
                      ]
                    },
                    "Order": {
                      "type": "array",
                      "contains": {
                        "type": "string"
                      },
                      "default": [
                        "Tier",
                        "Component",
                        "Type",
                        "SubComponent",
                        "Instance",
                        "Version",
                        "Name"
                      ]
                    },
                    "IncludeInNamespace": {
                      "type": "object",
                      "additionalProperties": false,
                      "properties": {
                        "Tier": {
                          "type": "boolean",
                          "default": true
                        },
                        "Component": {
                          "type": "boolean",
                          "default": true
                        },
                        "Type": {
                          "type": "boolean",
                          "default": false
                        },
                        "SubComponent": {
                          "type": "boolean",
                          "default": false
                        },
                        "Instance": {
                          "type": "boolean",
                          "default": true
                        },
                        "Version": {
                          "type": "boolean",
                          "default": true
                        },
                        "Name": {
                          "type": "boolean",
                          "default": false
                        }
                      }
                    },
                    "Name": {
                      "type": "string"
                    }
                  },
                  "additionalProperties": false
                }
              }
            },
            "Export": {
              "type": "array",
              "contains": {
                "type": "string"
              }
            },
            "Instances": {
              "type": "object",
              "description": "Instances of a component configuration",
              "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": {
                  "properties": {
                    "Versions": {
                      "type": "object",
                      "description": "Versions of the components instance.",
                      "patternProperties": {
                        "^[A-Za-z_][A-Za-z0-9_]*$": {
                          "properties": {
                            "DeploymentUnits": {
                              "type": "array",
                              "contains": {
                                "type": "string"
                              },
                              "description": "An singleton instance of the component, Instance & Version configuration."
                            }
                          },
                          "additionalProperties": false
                        }
                      }
                    },
                    "DeploymentUnits": {
                      "type": "array",
                      "contains": {
                        "type": "string"
                      },
                      "description": "An singleton instance of the component, Instance & Version configuration."
                    }
                  },
                  "additionalProperties": false
                }
              }
            },
            "DeploymentUnits": {
              "type": "array",
              "contains": {
                "type": "string"
              },
              "description": "An singleton instance of the component, Instance & Version configuration."
            }
          },
          "additionalProperties": false
        }
      }
    }
  }
}
