{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "$id": "https://docs.hamlet.io/schema/latest/blueprint/schema-component-apigateway-schema.json",
  "definitions": {
    "apigateway": {
      "type": "object",
      "patternProperties": {
        "^[A-Za-z_][A-Za-z0-9_]*$": {
          "properties": {
            "Extensions": {
              "type": "array",
              "contains": {
                "type": "string"
              },
              "description": "Extensions to invoke as part of component processing"
            },
            "AccessLogging": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "Enabled": {
                  "type": "boolean",
                  "description": "Logging of the API Gateway Access Logs.",
                  "default": true
                },
                "aws:DestinationLink": {
                  "$ref": "https://docs.hamlet.io/schema/latest/blueprint/schema-attributeset-link-schema.json",
                  "description": "Destination for the Access logs. If not provided but AccessLogging is enabled, Access logs will be sent to CloudWatch."
                },
                "aws:KinesisFirehose": {
                  "type": "boolean",
                  "description": "Send Access logs to a KinesisFirehose. By default, the Firehose destination is the OpsData DataBucket, but can be overwritten by specifying a DestinationLink.",
                  "default": false
                },
                "aws:KeepLogGroup": {
                  "type": "boolean",
                  "description": "Prevent the destruction of existing LogGroups when enabling KinesisFirehose.",
                  "default": true
                }
              }
            },
            "Links": {
              "$ref": "https://docs.hamlet.io/schema/latest/blueprint/schema-attributeset-link-schema.json"
            },
            "WAF": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "IPAddressGroups": {
                  "type": "array",
                  "contains": {
                    "type": "string"
                  }
                },
                "CountryGroups": {
                  "type": "array",
                  "contains": {
                    "type": "string"
                  }
                },
                "OWASP": {
                  "type": "boolean",
                  "default": false
                },
                "Logging": {
                  "type": "object",
                  "additionalProperties": false,
                  "properties": {
                    "Enabled": {
                      "type": "boolean",
                      "default": true
                    }
                  }
                },
                "Profiles": {
                  "type": "object",
                  "additionalProperties": false,
                  "properties": {
                    "Logging": {
                      "type": "string",
                      "description": "Logging profile to process WAF Logs that are stored in the OpsData DataBucket.",
                      "default": "waf"
                    }
                  }
                },
                "RateLimits": {
                  "type": "object",
                  "patternProperties": {
                    "^[A-Za-z_][A-Za-z0-9_]*$": {
                      "properties": {
                        "IPAddressGroups": {
                          "type": "array",
                          "contains": {
                            "type": "string"
                          }
                        },
                        "Limit": {
                          "type": "number"
                        }
                      },
                      "additionalProperties": false,
                      "required": [
                        "Limit"
                      ]
                    }
                  }
                }
              }
            },
            "EndpointType": {
              "type": "string",
              "default": "EDGE",
              "enum": [
                "EDGE",
                "REGIONAL"
              ]
            },
            "IPAddressGroups": {
              "type": "array",
              "contains": {
                "type": "string"
              }
            },
            "Authentication": {
              "type": "string",
              "default": "IP",
              "enum": [
                "IP",
                "SIG4ORIP",
                "SIG4ANDIP"
              ]
            },
            "CloudFront": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "AssumeSNI": {
                  "type": "boolean",
                  "default": true
                },
                "EnableLogging": {
                  "type": "boolean",
                  "default": true
                },
                "CountryGroups": {
                  "type": "array",
                  "contains": {
                    "type": "string"
                  }
                },
                "CustomHeaders": {
                  "type": "array"
                },
                "Mapping": {
                  "type": "boolean",
                  "default": false
                },
                "Compress": {
                  "type": "boolean",
                  "default": true
                }
              }
            },
            "Certificate": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "Qualifiers": {
                  "type": "object"
                },
                "Domain": {
                  "type": "string"
                },
                "IncludeInDomain": {
                  "type": "object",
                  "additionalProperties": false,
                  "properties": {
                    "Product": {
                      "type": "boolean"
                    },
                    "Environment": {
                      "type": "boolean"
                    },
                    "Segment": {
                      "type": "boolean"
                    }
                  }
                },
                "Host": {
                  "type": "string"
                },
                "HostParts": {
                  "type": "array",
                  "contains": {
                    "type": "string"
                  }
                },
                "IncludeInHost": {
                  "type": "object",
                  "additionalProperties": false,
                  "properties": {
                    "Product": {
                      "type": "boolean"
                    },
                    "Environment": {
                      "type": "boolean"
                    },
                    "Segment": {
                      "type": "boolean"
                    },
                    "Tier": {
                      "type": "boolean"
                    },
                    "Component": {
                      "type": "boolean"
                    },
                    "Instance": {
                      "type": "boolean"
                    },
                    "Version": {
                      "type": "boolean"
                    },
                    "Host": {
                      "type": "boolean"
                    }
                  }
                },
                "External": {
                  "type": "boolean"
                },
                "Wildcard": {
                  "type": "boolean"
                }
              }
            },
            "Publish": {
              "type": "object",
              "additionalProperties": false,
              "description": "Deprecated - Please switch to the publishers configuration",
              "properties": {
                "DnsNamePrefix": {
                  "type": "string",
                  "default": "docs"
                },
                "IPAddressGroups": {
                  "type": "array",
                  "contains": {
                    "type": "string"
                  }
                }
              }
            },
            "Publishers": {
              "type": "object",
              "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": {
                  "properties": {
                    "Enabled": {
                      "type": "boolean",
                      "default": true
                    },
                    "Links": {
                      "$ref": "https://docs.hamlet.io/schema/latest/blueprint/schema-attributeset-link-schema.json"
                    },
                    "Path": {
                      "$ref": "https://docs.hamlet.io/schema/latest/blueprint/schema-attributeset-contextpath-schema.json"
                    },
                    "UsePathInName": {
                      "type": "boolean",
                      "description": "Name the Swagger Spec file using the path",
                      "default": true
                    }
                  },
                  "additionalProperties": false
                }
              }
            },
            "Mapping": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "IncludeStage": {
                  "type": "boolean",
                  "default": true
                }
              }
            },
            "Alerts": {
              "type": "object",
              "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": {
                  "properties": {
                    "Namespace": {
                      "type": "string"
                    },
                    "DimensionSource": {
                      "type": "string",
                      "description": "The source of the alert dimensions - resource lookup or explicit configuration",
                      "default": "Resource",
                      "enum": [
                        "Resource",
                        "Configured"
                      ]
                    },
                    "Resource": {
                      "type": "object",
                      "additionalProperties": false,
                      "description": "Provide a component resource to determine the dimensions of the metric",
                      "properties": {
                        "Id": {
                          "type": "string"
                        },
                        "Type": {
                          "type": "string"
                        }
                      }
                    },
                    "Dimensions": {
                      "type": "object",
                      "description": "Explicit configured dimensions",
                      "patternProperties": {
                        "^[A-Za-z_][A-Za-z0-9_]*$": {
                          "properties": {
                            "Key": {
                              "type": "string",
                              "description": "The Key of the dimension"
                            },
                            "Value": {
                              "type": "string",
                              "description": "The value of the dimension to match"
                            },
                            "SettingEnvName": {
                              "type": "string",
                              "description": "A setting name as env that will provide the dimension value"
                            }
                          },
                          "additionalProperties": false
                        }
                      }
                    },
                    "Metric": {
                      "type": "string"
                    },
                    "Statistic": {
                      "type": "string",
                      "default": "Sum"
                    },
                    "Description": {
                      "type": "string"
                    },
                    "Name": {
                      "type": "string"
                    },
                    "Threshold": {
                      "type": "number",
                      "default": 1
                    },
                    "Severity": {
                      "type": "string",
                      "default": "info",
                      "enum": [
                        "debug",
                        "info",
                        "warn",
                        "error",
                        "fatal"
                      ]
                    },
                    "Comparison": {
                      "type": "string",
                      "default": "Threshold"
                    },
                    "Operator": {
                      "type": "string",
                      "default": "GreaterThanOrEqualToThreshold"
                    },
                    "Time": {
                      "type": "number",
                      "default": 300
                    },
                    "Periods": {
                      "type": "number",
                      "default": 1
                    },
                    "ReportOk": {
                      "type": "boolean",
                      "default": false
                    },
                    "MissingData": {
                      "type": "string",
                      "default": "notBreaching"
                    },
                    "Unit": {
                      "type": "string",
                      "default": "Count"
                    }
                  },
                  "additionalProperties": false,
                  "required": [
                    "Metric",
                    "Name"
                  ]
                }
              }
            },
            "LogMetrics": {
              "type": "object",
              "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": {
                  "properties": {
                    "LogFilter": {
                      "type": "string"
                    }
                  },
                  "additionalProperties": false,
                  "required": [
                    "LogFilter"
                  ]
                }
              }
            },
            "BasePathBehaviour": {
              "type": "string",
              "description": "How to handle base paths provided in the spec",
              "default": "ignore",
              "enum": [
                "ignore",
                "prepend",
                "split"
              ]
            },
            "Tracing": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "Mode": {
                  "type": "string",
                  "enum": [
                    "active",
                    "passthrough"
                  ]
                }
              }
            },
            "Profiles": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "Deployment": {
                  "type": "array",
                  "contains": {
                    "type": "string"
                  }
                },
                "Policy": {
                  "type": "array",
                  "contains": {
                    "type": "string"
                  }
                },
                "Placement": {
                  "type": "string",
                  "default": "default"
                },
                "Baseline": {
                  "type": "string",
                  "description": "The profile used to lookup standard services provided by the segment baseline",
                  "default": "default"
                },
                "Testing": {
                  "type": "array",
                  "contains": {
                    "type": "string"
                  },
                  "description": "The testing profiles to apply to the component"
                },
                "Security": {
                  "type": "string",
                  "default": "default"
                },
                "Alert": {
                  "type": "string",
                  "default": "default"
                },
                "Logging": {
                  "type": "string",
                  "default": "default"
                }
              }
            },
            "SettingNamespaces": {
              "type": "object",
              "description": "Additional namespaces to use during settings lookups",
              "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": {
                  "properties": {
                    "Match": {
                      "type": "string",
                      "description": "How to match the namespace with available settings",
                      "default": "exact",
                      "enum": [
                        "exact",
                        "partial"
                      ]
                    },
                    "Order": {
                      "type": "array",
                      "contains": {
                        "type": "string"
                      },
                      "default": [
                        "Tier",
                        "Component",
                        "Type",
                        "SubComponent",
                        "Instance",
                        "Version",
                        "Name"
                      ]
                    },
                    "IncludeInNamespace": {
                      "type": "object",
                      "additionalProperties": false,
                      "properties": {
                        "Tier": {
                          "type": "boolean",
                          "default": true
                        },
                        "Component": {
                          "type": "boolean",
                          "default": true
                        },
                        "Type": {
                          "type": "boolean",
                          "default": false
                        },
                        "SubComponent": {
                          "type": "boolean",
                          "default": false
                        },
                        "Instance": {
                          "type": "boolean",
                          "default": true
                        },
                        "Version": {
                          "type": "boolean",
                          "default": true
                        },
                        "Name": {
                          "type": "boolean",
                          "default": false
                        }
                      }
                    },
                    "Name": {
                      "type": "string"
                    }
                  },
                  "additionalProperties": false
                }
              }
            },
            "Export": {
              "type": "array",
              "contains": {
                "type": "string"
              }
            },
            "DeploymentUnits": {
              "type": "array",
              "contains": {
                "type": "string"
              }
            },
            "azure:Contact": {
              "type": "object",
              "additionalProperties": false,
              "description": "The contact for the API Management Service",
              "properties": {
                "Name": {
                  "type": "string"
                },
                "Email": {
                  "type": "string"
                }
              }
            }
          },
          "additionalProperties": false
        }
      }
    }
  }
}
