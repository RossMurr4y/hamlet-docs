{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "$id": "https://docs.hamlet.io/schema/latest/blueprint/schema-component-userpool-schema.json",
  "definitions": {
    "userpool": {
      "type": "object",
      "patternProperties": {
        "^[A-Za-z_][A-Za-z0-9_]*$": {
          "properties": {
            "MFA": {
              "anyOf": [
                {
                  "type": "boolean"
                },
                {
                  "type": "string"
                }
              ],
              "default": false,
              "enum": [
                "true",
                true,
                "false",
                false,
                "optional"
              ]
            },
            "MFAMethods": {
              "type": "array",
              "contains": {
                "type": "string"
              },
              "default": [
                "SMS"
              ],
              "enum": [
                "SMS",
                "SoftwareToken"
              ]
            },
            "AdminCreatesUser": {
              "type": "boolean",
              "default": true
            },
            "UnusedAccountTimeout": {
              "type": "number",
              "default": 1
            },
            "VerifyEmail": {
              "type": "boolean",
              "default": true
            },
            "VerifyPhone": {
              "type": "boolean",
              "default": false
            },
            "LoginAliases": {
              "type": "array",
              "contains": {
                "type": "string"
              },
              "description": "Deprecated - use Username.Aliases"
            },
            "AuthorizationHeader": {
              "type": "string",
              "default": "Authorization"
            },
            "Username": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "CaseSensitive": {
                  "type": "boolean",
                  "default": true
                },
                "Attributes": {
                  "type": "array",
                  "contains": {
                    "type": "string"
                  },
                  "enum": [
                    "email",
                    "phone_number"
                  ]
                },
                "Aliases": {
                  "type": "array",
                  "contains": {
                    "type": "string"
                  },
                  "default": [
                    "email"
                  ],
                  "enum": [
                    "phone_number",
                    "email",
                    "preferred_username"
                  ]
                }
              }
            },
            "PasswordPolicy": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "AllowUserRecovery": {
                  "type": "boolean",
                  "default": true
                },
                "MinimumLength": {
                  "type": "number",
                  "default": 10
                },
                "Lowercase": {
                  "type": "boolean",
                  "default": true
                },
                "Uppercase": {
                  "type": "boolean",
                  "default": true
                },
                "Numbers": {
                  "type": "boolean",
                  "default": true
                },
                "SpecialCharacters": {
                  "type": "boolean",
                  "default": true
                }
              }
            },
            "Links": {
              "$ref": "https://docs.hamlet.io/schema/latest/blueprint/schema-attributeset-link-schema.json"
            },
            "DefaultClient": {
              "type": "boolean",
              "description": "Enable default client mode which creates app client for the user pool and aligns with legacy config",
              "default": true
            },
            "Schema": {
              "type": "object",
              "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": {
                  "properties": {
                    "DataType": {
                      "type": "string",
                      "default": "String",
                      "enum": [
                        "String",
                        "Number",
                        "DateTime",
                        "Boolean"
                      ]
                    },
                    "Mutable": {
                      "type": "boolean",
                      "default": true
                    },
                    "Required": {
                      "type": "boolean",
                      "default": true
                    },
                    "Constraints": {
                      "type": "object",
                      "additionalProperties": false,
                      "description": "Constraints applied to the attribute based on their type",
                      "properties": {
                        "String": {
                          "type": "object",
                          "additionalProperties": false,
                          "description": "String based Constraints",
                          "properties": {
                            "MinLength": {
                              "type": "number",
                              "description": "The minimumn length of the attribute 0 = any",
                              "default": 0
                            },
                            "MaxLength": {
                              "type": "number",
                              "description": "The maximum length of the attribute 0 = any",
                              "default": 0
                            }
                          }
                        },
                        "Number": {
                          "type": "object",
                          "additionalProperties": false,
                          "description": "Number based Constraints",
                          "properties": {
                            "MinValue": {
                              "type": "number",
                              "description": "The minimumn value of the attribute"
                            },
                            "MaxValue": {
                              "type": "number",
                              "description": "The maximum value of the attribute"
                            }
                          }
                        }
                      }
                    }
                  },
                  "additionalProperties": false
                }
              }
            },
            "HostedUI": {
              "type": "object",
              "additionalProperties": false,
              "description": "Provision a managed endpoint for login and oauth endpoints",
              "properties": {
                "Certificate": {
                  "type": "object",
                  "additionalProperties": false,
                  "properties": {
                    "Qualifiers": {
                      "type": "object"
                    },
                    "Domain": {
                      "type": "string"
                    },
                    "IncludeInDomain": {
                      "type": "object",
                      "additionalProperties": false,
                      "properties": {
                        "Product": {
                          "type": "boolean"
                        },
                        "Environment": {
                          "type": "boolean"
                        },
                        "Segment": {
                          "type": "boolean"
                        }
                      }
                    },
                    "Host": {
                      "type": "string"
                    },
                    "HostParts": {
                      "type": "array",
                      "contains": {
                        "type": "string"
                      }
                    },
                    "IncludeInHost": {
                      "type": "object",
                      "additionalProperties": false,
                      "properties": {
                        "Product": {
                          "type": "boolean"
                        },
                        "Environment": {
                          "type": "boolean"
                        },
                        "Segment": {
                          "type": "boolean"
                        },
                        "Tier": {
                          "type": "boolean"
                        },
                        "Component": {
                          "type": "boolean"
                        },
                        "Instance": {
                          "type": "boolean"
                        },
                        "Version": {
                          "type": "boolean"
                        },
                        "Host": {
                          "type": "boolean"
                        }
                      }
                    },
                    "External": {
                      "type": "boolean"
                    },
                    "Wildcard": {
                      "type": "boolean"
                    }
                  }
                }
              }
            },
            "Security": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "UserDeviceTracking": {
                  "anyOf": [
                    {
                      "type": "boolean"
                    },
                    {
                      "type": "string"
                    }
                  ],
                  "default": "optional",
                  "enum": [
                    "true",
                    true,
                    "false",
                    false,
                    "optional"
                  ]
                },
                "ActivityTracking": {
                  "type": "string",
                  "description": "Apply authentication validation based on activity",
                  "default": "disabled",
                  "enum": [
                    "disabled",
                    "audit",
                    "enforced"
                  ]
                }
              }
            },
            "VerificationEmailType": {
              "type": "string",
              "description": "The default verification email option for message customization.",
              "default": "code",
              "enum": [
                "code",
                "link"
              ]
            },
            "Profiles": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "Deployment": {
                  "type": "array",
                  "contains": {
                    "type": "string"
                  }
                },
                "Policy": {
                  "type": "array",
                  "contains": {
                    "type": "string"
                  }
                },
                "Placement": {
                  "type": "string",
                  "default": "default"
                },
                "Baseline": {
                  "type": "string",
                  "description": "The profile used to lookup standard services provided by the segment baseline",
                  "default": "default"
                },
                "Testing": {
                  "type": "array",
                  "contains": {
                    "type": "string"
                  },
                  "description": "The testing profiles to apply to the component"
                }
              }
            },
            "SettingNamespaces": {
              "type": "object",
              "description": "Additional namespaces to use during settings lookups",
              "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": {
                  "properties": {
                    "Match": {
                      "type": "string",
                      "description": "How to match the namespace with available settings",
                      "default": "exact",
                      "enum": [
                        "exact",
                        "partial"
                      ]
                    },
                    "Order": {
                      "type": "array",
                      "contains": {
                        "type": "string"
                      },
                      "default": [
                        "Tier",
                        "Component",
                        "Type",
                        "SubComponent",
                        "Instance",
                        "Version",
                        "Name"
                      ]
                    },
                    "IncludeInNamespace": {
                      "type": "object",
                      "additionalProperties": false,
                      "properties": {
                        "Tier": {
                          "type": "boolean",
                          "default": true
                        },
                        "Component": {
                          "type": "boolean",
                          "default": true
                        },
                        "Type": {
                          "type": "boolean",
                          "default": false
                        },
                        "SubComponent": {
                          "type": "boolean",
                          "default": false
                        },
                        "Instance": {
                          "type": "boolean",
                          "default": true
                        },
                        "Version": {
                          "type": "boolean",
                          "default": true
                        },
                        "Name": {
                          "type": "boolean",
                          "default": false
                        }
                      }
                    },
                    "Name": {
                      "type": "string"
                    }
                  },
                  "additionalProperties": false
                }
              }
            },
            "Export": {
              "type": "array",
              "contains": {
                "type": "string"
              }
            },
            "DeploymentUnits": {
              "type": "array",
              "contains": {
                "type": "string"
              }
            },
            "Clients": {
              "$ref": "https://docs.hamlet.io/schema/latest/blueprint/schema-component-userpoolclient-schema.json"
            },
            "AuthProviders": {
              "$ref": "https://docs.hamlet.io/schema/latest/blueprint/schema-component-userpoolauthprovider-schema.json"
            },
            "Resources": {
              "$ref": "https://docs.hamlet.io/schema/latest/blueprint/schema-component-userpoolresource-schema.json"
            }
          },
          "additionalProperties": false
        }
      }
    }
  }
}
