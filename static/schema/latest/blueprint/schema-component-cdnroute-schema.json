{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "$id": "https://hamlet.io/schema/latest/blueprint/component-cdnroute-schema.json",
  "definitions": {
    "cdnroute": {
      "type": "object",
      "patternProperties": {
        "^[A-Za-z_][A-Za-z0-9_]*$": {
          "properties": {
            "PathPattern": {
              "type": "string",
              "description": "The path based pattern to match for this route to apply"
            },
            "Origin": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "BasePath": {
                  "type": "string",
                  "description": "The base path at the origin destination"
                },
                "Link": {
                  "type": "object",
                  "additionalProperties": false,
                  "properties": {
                    "Any": {
                      "type": "string"
                    },
                    "Tenant": {
                      "type": "string"
                    },
                    "Product": {
                      "type": "string"
                    },
                    "Environment": {
                      "type": "string"
                    },
                    "Segment": {
                      "type": "string"
                    },
                    "Tier": {
                      "type": "string"
                    },
                    "Component": {
                      "type": "string"
                    },
                    "Function": {
                      "type": "string"
                    },
                    "Service": {
                      "type": "string"
                    },
                    "Task": {
                      "type": "string"
                    },
                    "PortMapping": {
                      "type": "string"
                    },
                    "Mount": {
                      "type": "string"
                    },
                    "Platform": {
                      "type": "string"
                    },
                    "RouteTable": {
                      "type": "string"
                    },
                    "NetworkACL": {
                      "type": "string"
                    },
                    "DataBucket": {
                      "type": "string"
                    },
                    "Key": {
                      "type": "string"
                    },
                    "Branch": {
                      "type": "string"
                    },
                    "Client": {
                      "type": "string"
                    },
                    "Connection": {
                      "type": "string"
                    },
                    "AuthProvider": {
                      "type": "string"
                    },
                    "Resource": {
                      "type": "string"
                    },
                    "DataFeed": {
                      "type": "string"
                    },
                    "RegistryService": {
                      "type": "string"
                    },
                    "Assignment": {
                      "type": "string"
                    },
                    "Route": {
                      "type": "string"
                    },
                    "Endpoint": {
                      "type": "string"
                    },
                    "Instance": {
                      "type": "string"
                    },
                    "Version": {
                      "type": "string"
                    },
                    "Secret": {
                      "type": "string"
                    },
                    "Rule": {
                      "type": "string"
                    },
                    "Role": {
                      "type": "string"
                    },
                    "Direction": {
                      "type": "string"
                    },
                    "Type": {
                      "type": "string"
                    },
                    "Enabled": {
                      "type": "boolean",
                      "default": true
                    },
                    "IncludeInContext": {
                      "type": "array",
                      "contains": {
                        "type": "string"
                      }
                    }
                  },
                  "required": [
                    "Tier",
                    "Component"
                  ]
                }
              },
              "required": [
                "Link"
              ]
            },
            "CachingTTL": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "Default": {
                  "type": "number",
                  "default": 600
                },
                "Maximum": {
                  "type": "number",
                  "default": 31536000
                },
                "Minimum": {
                  "type": "number",
                  "default": 0
                }
              }
            },
            "Compress": {
              "type": "boolean",
              "default": false
            },
            "InvalidateOnUpdate": {
              "type": "boolean",
              "default": true
            },
            "RedirectAliases": {
              "type": "object",
              "additionalProperties": false,
              "description": "Redirect secondary domains to the primary domain name",
              "properties": {
                "Enabled": {
                  "type": "boolean",
                  "default": true
                },
                "RedirectVersion": {
                  "type": "string",
                  "default": "v1"
                }
              }
            },
            "EventHandlers": {
              "type": "object",
              "description": "Attach a function to a stage in the Cloudfront Processing",
              "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": {
                  "properties": {
                    "Tier": {
                      "type": "string"
                    },
                    "Component": {
                      "type": "string"
                    },
                    "Function": {
                      "type": "string"
                    },
                    "Instance": {
                      "type": "string"
                    },
                    "Version": {
                      "type": "string"
                    },
                    "Action": {
                      "type": "string",
                      "enum": [
                        "viewer-request",
                        "viewer-response",
                        "origin-request",
                        "origin-response"
                      ]
                    }
                  },
                  "additionalProperties": false,
                  "required": [
                    "Tier",
                    "Component",
                    "Function",
                    "Action"
                  ]
                }
              }
            },
            "Profiles": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "Deployment": {
                  "type": "array",
                  "contains": {
                    "type": "string"
                  }
                },
                "Policy": {
                  "type": "array",
                  "contains": {
                    "type": "string"
                  }
                },
                "Placement": {
                  "type": "string",
                  "default": "default"
                },
                "Baseline": {
                  "type": "string",
                  "description": "The profile used to lookup standard services provided by the segment baseline",
                  "default": "default"
                },
                "Testing": {
                  "type": "array",
                  "contains": {
                    "type": "string"
                  },
                  "description": "The testing profiles to apply to the component"
                }
              }
            },
            "SettingNamespaces": {
              "type": "object",
              "description": "Additional namespaces to use during settings lookups",
              "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": {
                  "properties": {
                    "Match": {
                      "type": "string",
                      "description": "How to match the namespace with available settings",
                      "default": "exact",
                      "enum": [
                        "exact",
                        "partial"
                      ]
                    },
                    "Order": {
                      "type": "array",
                      "contains": {
                        "type": "string"
                      },
                      "default": [
                        "Tier",
                        "Component",
                        "Type",
                        "SubComponent",
                        "Instance",
                        "Version",
                        "Name"
                      ]
                    },
                    "IncludeInNamespace": {
                      "type": "object",
                      "additionalProperties": false,
                      "properties": {
                        "Tier": {
                          "type": "boolean",
                          "default": true
                        },
                        "Component": {
                          "type": "boolean",
                          "default": true
                        },
                        "Type": {
                          "type": "boolean",
                          "default": false
                        },
                        "SubComponent": {
                          "type": "boolean",
                          "default": false
                        },
                        "Instance": {
                          "type": "boolean",
                          "default": true
                        },
                        "Version": {
                          "type": "boolean",
                          "default": true
                        },
                        "Name": {
                          "type": "boolean",
                          "default": false
                        }
                      }
                    },
                    "Name": {
                      "type": "string"
                    }
                  },
                  "additionalProperties": false
                }
              }
            },
            "Export": {
              "type": "array",
              "contains": {
                "type": "string"
              }
            },
            "DeploymentUnits": {
              "type": "array",
              "contains": {
                "type": "string"
              }
            }
          },
          "additionalProperties": false,
          "required": [
            "PathPattern"
          ]
        }
      }
    }
  }
}
