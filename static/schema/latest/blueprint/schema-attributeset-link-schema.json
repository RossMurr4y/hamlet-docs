{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "$id": "https://hamlet.io/schema/latest/blueprint/attributeset-link-schema.json",
  "definitions": {
    "link": {
      "type": "object",
      "patternProperties": {
        "^[A-Za-z_][A-Za-z0-9_]*$": {
          "properties": {
            "Any": {
              "type": "object"
            },
            "Tenant": {
              "type": "object"
            },
            "Product": {
              "type": "object"
            },
            "Environment": {
              "type": "object"
            },
            "Segment": {
              "type": "object"
            },
            "Tier": {
              "type": "object"
            },
            "Component": {
              "type": "object"
            },
            "Function": {
              "type": "object"
            },
            "Service": {
              "type": "object"
            },
            "Task": {
              "type": "object"
            },
            "PortMapping": {
              "type": "object"
            },
            "Mount": {
              "type": "object"
            },
            "Platform": {
              "type": "object"
            },
            "RouteTable": {
              "type": "object"
            },
            "NetworkACL": {
              "type": "object"
            },
            "DataBucket": {
              "type": "object"
            },
            "Key": {
              "type": "object"
            },
            "Branch": {
              "type": "object"
            },
            "Client": {
              "type": "object"
            },
            "Connection": {
              "type": "object"
            },
            "AuthProvider": {
              "type": "object"
            },
            "Resource": {
              "type": "object"
            },
            "DataFeed": {
              "type": "object"
            },
            "RegistryService": {
              "type": "object"
            },
            "Assignment": {
              "type": "object"
            },
            "Route": {
              "type": "object"
            },
            "Endpoint": {
              "type": "object"
            },
            "Instance": {
              "type": "object"
            },
            "Version": {
              "type": "object"
            },
            "Secret": {
              "type": "object"
            },
            "Role": {
              "type": "object"
            },
            "Direction": {
              "type": "object"
            },
            "Type": {
              "type": "object"
            },
            "Enabled": {
              "type": "object",
              "default": true
            },
            "IncludeInContext": {
              "type": "object"
            }
          },
          "additionalProperties": false,
          "required": [
            "Tier",
            "Component"
          ]
        }
      }
    }
  }
}
