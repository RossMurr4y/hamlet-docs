{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "$id": "https://docs.hamlet.io/schema/latest/blueprint/schema-component-baseline-schema.json",
  "definitions": {
    "baseline": {
      "type": "object",
      "patternProperties": {
        "^[A-Za-z_][A-Za-z0-9_]*$": {
          "properties": {
            "Active": {
              "type": "boolean",
              "default": false
            },
            "Seed": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "Length": {
                  "type": "number",
                  "default": 10
                }
              }
            },
            "Profiles": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "Deployment": {
                  "type": "array",
                  "contains": {
                    "type": "string"
                  }
                },
                "Policy": {
                  "type": "array",
                  "contains": {
                    "type": "string"
                  }
                },
                "Placement": {
                  "type": "string",
                  "default": "default"
                },
                "Baseline": {
                  "type": "string",
                  "description": "The profile used to lookup standard services provided by the segment baseline",
                  "default": "default"
                },
                "Testing": {
                  "type": "array",
                  "contains": {
                    "type": "string"
                  },
                  "description": "The testing profiles to apply to the component"
                }
              }
            },
            "SettingNamespaces": {
              "type": "object",
              "description": "Additional namespaces to use during settings lookups",
              "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": {
                  "properties": {
                    "Match": {
                      "type": "string",
                      "description": "How to match the namespace with available settings",
                      "default": "exact",
                      "enum": [
                        "exact",
                        "partial"
                      ]
                    },
                    "Order": {
                      "type": "array",
                      "contains": {
                        "type": "string"
                      },
                      "default": [
                        "Tier",
                        "Component",
                        "Type",
                        "SubComponent",
                        "Instance",
                        "Version",
                        "Name"
                      ]
                    },
                    "IncludeInNamespace": {
                      "type": "object",
                      "additionalProperties": false,
                      "properties": {
                        "Tier": {
                          "type": "boolean",
                          "default": true
                        },
                        "Component": {
                          "type": "boolean",
                          "default": true
                        },
                        "Type": {
                          "type": "boolean",
                          "default": false
                        },
                        "SubComponent": {
                          "type": "boolean",
                          "default": false
                        },
                        "Instance": {
                          "type": "boolean",
                          "default": true
                        },
                        "Version": {
                          "type": "boolean",
                          "default": true
                        },
                        "Name": {
                          "type": "boolean",
                          "default": false
                        }
                      }
                    },
                    "Name": {
                      "type": "string"
                    }
                  },
                  "additionalProperties": false
                }
              }
            },
            "Export": {
              "type": "array",
              "contains": {
                "type": "string"
              }
            },
            "DeploymentUnits": {
              "type": "array",
              "contains": {
                "type": "string"
              }
            },
            "azure:Lifecycle": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "BlobRetentionDays": {
                  "type": "number"
                },
                "BlobAutoSnapshots": {
                  "type": "boolean",
                  "default": false
                }
              }
            },
            "azure:Certificate": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "Qualifiers": {
                  "type": "object"
                },
                "Domain": {
                  "type": "string"
                },
                "IncludeInDomain": {
                  "type": "object",
                  "additionalProperties": false,
                  "properties": {
                    "Product": {
                      "type": "boolean"
                    },
                    "Environment": {
                      "type": "boolean"
                    },
                    "Segment": {
                      "type": "boolean"
                    }
                  }
                },
                "Host": {
                  "type": "string"
                },
                "HostParts": {
                  "type": "array",
                  "contains": {
                    "type": "string"
                  }
                },
                "IncludeInHost": {
                  "type": "object",
                  "additionalProperties": false,
                  "properties": {
                    "Product": {
                      "type": "boolean"
                    },
                    "Environment": {
                      "type": "boolean"
                    },
                    "Segment": {
                      "type": "boolean"
                    },
                    "Tier": {
                      "type": "boolean"
                    },
                    "Component": {
                      "type": "boolean"
                    },
                    "Instance": {
                      "type": "boolean"
                    },
                    "Version": {
                      "type": "boolean"
                    },
                    "Host": {
                      "type": "boolean"
                    }
                  }
                },
                "External": {
                  "type": "boolean"
                },
                "Wildcard": {
                  "type": "boolean"
                }
              }
            },
            "azure:Access": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "DirectoryService": {
                  "type": "string",
                  "description": "The directory service that is used for authentication. 'None' or 'AADDS'."
                }
              }
            },
            "azure:AdministratorGroups": {
              "type": "array",
              "contains": {
                "type": "string"
              },
              "description": "The set of administrator groups controlling access to keyvault",
              "default": [
                "9b895d92-2cd3-44c7-9d02-a6ac2d5ea5c3"
              ]
            },
            "DataBuckets": {
              "$ref": "https://docs.hamlet.io/schema/latest/blueprint/schema-component-baselinedata-schema.json"
            },
            "Keys": {
              "$ref": "https://docs.hamlet.io/schema/latest/blueprint/schema-component-baselinekey-schema.json"
            }
          },
          "additionalProperties": false
        }
      }
    }
  }
}
