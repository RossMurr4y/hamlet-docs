{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "$id": "https://hamlet.io/schema/latest/blueprint/component-s3-schema.json",
  "definitions": {
    "s3": {
      "type": "object",
      "patternProperties": {
        "^[A-Za-z_][A-Za-z0-9_]*$": {
          "properties": {
            "Lifecycle": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "Expiration": {
                  "anyOf": [
                    {
                      "type": "string"
                    },
                    {
                      "type": "number"
                    }
                  ],
                  "description": "Provide either a date or a number of days"
                },
                "Offline": {
                  "anyOf": [
                    {
                      "type": "string"
                    },
                    {
                      "type": "number"
                    }
                  ],
                  "description": "Provide either a date or a number of days"
                },
                "Versioning": {
                  "type": "boolean",
                  "default": false
                }
              }
            },
            "Website": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "Index": {
                  "type": "string",
                  "default": "index.html"
                },
                "Error": {
                  "type": "string"
                }
              }
            },
            "PublicAccess": {
              "type": "object",
              "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": {
                  "properties": {
                    "Enabled": {
                      "type": "boolean",
                      "default": false
                    },
                    "Permissions": {
                      "type": "string",
                      "default": "ro",
                      "enum": [
                        "ro",
                        "wo",
                        "rw"
                      ]
                    },
                    "IPAddressGroups": {
                      "type": "array",
                      "contains": {
                        "type": "string"
                      },
                      "default": [
                        "_localnet"
                      ]
                    },
                    "Paths": {
                      "type": "array",
                      "contains": {
                        "type": "string"
                      }
                    }
                  },
                  "additionalProperties": false
                }
              }
            },
            "Extensions": {
              "type": "array",
              "contains": {
                "type": "string"
              },
              "description": "Extensions to invoke as part of component processing"
            },
            "Style": {
              "type": "string",
              "description": "TODO(mfl): Think this can be removed"
            },
            "Notifications": {
              "type": "object",
              "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": {
                  "properties": {
                    "Links": {
                      "type": "object",
                      "patternProperties": {
                        "^[A-Za-z_][A-Za-z0-9_]*$": {
                          "properties": {
                            "Any": {
                              "type": "string"
                            },
                            "Tenant": {
                              "type": "string"
                            },
                            "Product": {
                              "type": "string"
                            },
                            "Environment": {
                              "type": "string"
                            },
                            "Segment": {
                              "type": "string"
                            },
                            "Tier": {
                              "type": "string"
                            },
                            "Component": {
                              "type": "string"
                            },
                            "Function": {
                              "type": "string"
                            },
                            "Service": {
                              "type": "string"
                            },
                            "Task": {
                              "type": "string"
                            },
                            "PortMapping": {
                              "type": "string"
                            },
                            "Mount": {
                              "type": "string"
                            },
                            "Platform": {
                              "type": "string"
                            },
                            "RouteTable": {
                              "type": "string"
                            },
                            "NetworkACL": {
                              "type": "string"
                            },
                            "DataBucket": {
                              "type": "string"
                            },
                            "Key": {
                              "type": "string"
                            },
                            "Branch": {
                              "type": "string"
                            },
                            "Client": {
                              "type": "string"
                            },
                            "Connection": {
                              "type": "string"
                            },
                            "AuthProvider": {
                              "type": "string"
                            },
                            "Resource": {
                              "type": "string"
                            },
                            "DataFeed": {
                              "type": "string"
                            },
                            "RegistryService": {
                              "type": "string"
                            },
                            "Assignment": {
                              "type": "string"
                            },
                            "Route": {
                              "type": "string"
                            },
                            "Endpoint": {
                              "type": "string"
                            },
                            "Instance": {
                              "type": "string"
                            },
                            "Version": {
                              "type": "string"
                            },
                            "Secret": {
                              "type": "string"
                            },
                            "Rule": {
                              "type": "string"
                            },
                            "Role": {
                              "type": "string"
                            },
                            "Direction": {
                              "type": "string"
                            },
                            "Type": {
                              "type": "string"
                            },
                            "Enabled": {
                              "type": "boolean",
                              "default": true
                            },
                            "IncludeInContext": {
                              "type": "array",
                              "contains": {
                                "type": "string"
                              }
                            }
                          },
                          "additionalProperties": false,
                          "required": [
                            "Tier",
                            "Component"
                          ]
                        }
                      }
                    },
                    "Prefix": {
                      "type": "string"
                    },
                    "Suffix": {
                      "type": "string"
                    },
                    "Events": {
                      "type": "array",
                      "contains": {
                        "type": "string"
                      },
                      "default": [
                        "create"
                      ],
                      "enum": [
                        "create",
                        "delete",
                        "restore",
                        "reducedredundancy"
                      ]
                    },
                    "aws:QueuePermissionMigration": {
                      "type": "boolean",
                      "description": "Deprecation alert: set to true once policy updated for queue",
                      "default": false
                    }
                  },
                  "additionalProperties": false
                }
              }
            },
            "CORSBehaviours": {
              "type": "array",
              "contains": {
                "type": "string"
              }
            },
            "Replication": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "Prefixes": {
                  "type": "array",
                  "contains": {
                    "type": "string"
                  },
                  "default": [
                    ""
                  ]
                },
                "Enabled": {
                  "type": "boolean",
                  "default": true
                }
              }
            },
            "Encryption": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "Enabled": {
                  "type": "boolean",
                  "description": "Enable at rest encryption",
                  "default": false
                },
                "EncryptionSource": {
                  "type": "string",
                  "description": "The encryption service to use - LocalService = S3, EncryptionService = native encryption service (kms)",
                  "default": "EncryptionService",
                  "enum": [
                    "EncryptionService",
                    "LocalService"
                  ]
                }
              }
            },
            "Links": {
              "type": "object",
              "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": {
                  "properties": {
                    "Any": {
                      "type": "string"
                    },
                    "Tenant": {
                      "type": "string"
                    },
                    "Product": {
                      "type": "string"
                    },
                    "Environment": {
                      "type": "string"
                    },
                    "Segment": {
                      "type": "string"
                    },
                    "Tier": {
                      "type": "string"
                    },
                    "Component": {
                      "type": "string"
                    },
                    "Function": {
                      "type": "string"
                    },
                    "Service": {
                      "type": "string"
                    },
                    "Task": {
                      "type": "string"
                    },
                    "PortMapping": {
                      "type": "string"
                    },
                    "Mount": {
                      "type": "string"
                    },
                    "Platform": {
                      "type": "string"
                    },
                    "RouteTable": {
                      "type": "string"
                    },
                    "NetworkACL": {
                      "type": "string"
                    },
                    "DataBucket": {
                      "type": "string"
                    },
                    "Key": {
                      "type": "string"
                    },
                    "Branch": {
                      "type": "string"
                    },
                    "Client": {
                      "type": "string"
                    },
                    "Connection": {
                      "type": "string"
                    },
                    "AuthProvider": {
                      "type": "string"
                    },
                    "Resource": {
                      "type": "string"
                    },
                    "DataFeed": {
                      "type": "string"
                    },
                    "RegistryService": {
                      "type": "string"
                    },
                    "Assignment": {
                      "type": "string"
                    },
                    "Route": {
                      "type": "string"
                    },
                    "Endpoint": {
                      "type": "string"
                    },
                    "Instance": {
                      "type": "string"
                    },
                    "Version": {
                      "type": "string"
                    },
                    "Secret": {
                      "type": "string"
                    },
                    "Rule": {
                      "type": "string"
                    },
                    "Role": {
                      "type": "string"
                    },
                    "Direction": {
                      "type": "string"
                    },
                    "Type": {
                      "type": "string"
                    },
                    "Enabled": {
                      "type": "boolean",
                      "default": true
                    },
                    "IncludeInContext": {
                      "type": "array",
                      "contains": {
                        "type": "string"
                      }
                    }
                  },
                  "additionalProperties": false,
                  "required": [
                    "Tier",
                    "Component"
                  ]
                }
              }
            },
            "Profiles": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "Deployment": {
                  "type": "array",
                  "contains": {
                    "type": "string"
                  }
                },
                "Policy": {
                  "type": "array",
                  "contains": {
                    "type": "string"
                  }
                },
                "Placement": {
                  "type": "string",
                  "default": "default"
                },
                "Baseline": {
                  "type": "string",
                  "description": "The profile used to lookup standard services provided by the segment baseline",
                  "default": "default"
                },
                "Testing": {
                  "type": "array",
                  "contains": {
                    "type": "string"
                  },
                  "description": "The testing profiles to apply to the component"
                }
              }
            },
            "SettingNamespaces": {
              "type": "object",
              "description": "Additional namespaces to use during settings lookups",
              "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": {
                  "properties": {
                    "Match": {
                      "type": "string",
                      "description": "How to match the namespace with available settings",
                      "default": "exact",
                      "enum": [
                        "exact",
                        "partial"
                      ]
                    },
                    "Order": {
                      "type": "array",
                      "contains": {
                        "type": "string"
                      },
                      "default": [
                        "Tier",
                        "Component",
                        "Type",
                        "SubComponent",
                        "Instance",
                        "Version",
                        "Name"
                      ]
                    },
                    "IncludeInNamespace": {
                      "type": "object",
                      "additionalProperties": false,
                      "properties": {
                        "Tier": {
                          "type": "boolean",
                          "default": true
                        },
                        "Component": {
                          "type": "boolean",
                          "default": true
                        },
                        "Type": {
                          "type": "boolean",
                          "default": false
                        },
                        "SubComponent": {
                          "type": "boolean",
                          "default": false
                        },
                        "Instance": {
                          "type": "boolean",
                          "default": true
                        },
                        "Version": {
                          "type": "boolean",
                          "default": true
                        },
                        "Name": {
                          "type": "boolean",
                          "default": false
                        }
                      }
                    },
                    "Name": {
                      "type": "string"
                    }
                  },
                  "additionalProperties": false
                }
              }
            },
            "Export": {
              "type": "array",
              "contains": {
                "type": "string"
              }
            },
            "DeploymentUnits": {
              "type": "array",
              "contains": {
                "type": "string"
              }
            }
          },
          "additionalProperties": false
        }
      }
    }
  }
}
