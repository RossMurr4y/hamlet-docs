{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "$id": "https://docs.hamlet.io/schema/latest/blueprint/schema-reference-scriptstore-schema.json",
  "definitions": {
    "ScriptStore": {
      "type": "object",
      "patternProperties": {
        "^[A-Za-z_][A-Za-z0-9_]*$": {
          "properties": {
            "Engine": {
              "type": "string",
              "enum": [
                "local",
                "github"
              ]
            },
            "Destination": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "Prefix": {
                  "type": "string"
                }
              }
            },
            "Source": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "Directory": {
                  "type": "string"
                },
                "Repository": {
                  "type": "string"
                },
                "Branch": {
                  "type": "string"
                }
              }
            }
          },
          "additionalProperties": false
        }
      }
    }
  }
}
