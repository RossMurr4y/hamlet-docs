{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "$id": "https://docs.hamlet.io/schema/latest/blueprint/schema-component-cdn-schema.json",
  "definitions": {
    "cdn": {
      "type": "object",
      "patternProperties": {
        "^[A-Za-z_][A-Za-z0-9_]*$": {
          "properties": {
            "Extensions": {
              "type": "array",
              "contains": {
                "type": "string"
              },
              "description": "Extensions to invoke as part of component processing"
            },
            "Links": {
              "$ref": "https://docs.hamlet.io/schema/latest/blueprint/schema-attributeset-link-schema.json"
            },
            "WAF": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "IPAddressGroups": {
                  "type": "array",
                  "contains": {
                    "type": "string"
                  }
                },
                "CountryGroups": {
                  "type": "array",
                  "contains": {
                    "type": "string"
                  }
                },
                "OWASP": {
                  "type": "boolean",
                  "default": false
                },
                "Logging": {
                  "type": "object",
                  "additionalProperties": false,
                  "properties": {
                    "Enabled": {
                      "type": "boolean",
                      "default": true
                    }
                  }
                },
                "Profiles": {
                  "type": "object",
                  "additionalProperties": false,
                  "properties": {
                    "Logging": {
                      "type": "string",
                      "description": "Logging profile to process WAF Logs that are stored in the OpsData DataBucket.",
                      "default": "waf"
                    }
                  }
                },
                "RateLimits": {
                  "type": "object",
                  "patternProperties": {
                    "^[A-Za-z_][A-Za-z0-9_]*$": {
                      "properties": {
                        "IPAddressGroups": {
                          "type": "array",
                          "contains": {
                            "type": "string"
                          }
                        },
                        "Limit": {
                          "type": "number"
                        }
                      },
                      "additionalProperties": false,
                      "required": [
                        "Limit"
                      ]
                    }
                  }
                }
              }
            },
            "Pages": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "Root": {
                  "type": "string",
                  "default": "index.html"
                },
                "Error": {
                  "type": "string",
                  "default": "/index.html"
                },
                "Denied": {
                  "type": "string"
                },
                "NotFound": {
                  "type": "string"
                }
              }
            },
            "ErrorResponseOverrides": {
              "type": "object",
              "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": {
                  "properties": {
                    "ErrorCode": {
                      "type": "number"
                    },
                    "ResponseCode": {
                      "type": "number",
                      "default": 200
                    },
                    "ResponsePagePath": {
                      "type": "string"
                    }
                  },
                  "additionalProperties": false,
                  "required": [
                    "ErrorCode"
                  ]
                }
              }
            },
            "EnableLogging": {
              "type": "boolean",
              "default": true
            },
            "CountryGroups": {
              "type": "array",
              "contains": {
                "type": "string"
              }
            },
            "Certificate": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "Qualifiers": {
                  "type": "object"
                },
                "Domain": {
                  "type": "string"
                },
                "IncludeInDomain": {
                  "type": "object",
                  "additionalProperties": false,
                  "properties": {
                    "Product": {
                      "type": "boolean"
                    },
                    "Environment": {
                      "type": "boolean"
                    },
                    "Segment": {
                      "type": "boolean"
                    }
                  }
                },
                "Host": {
                  "type": "string"
                },
                "HostParts": {
                  "type": "array",
                  "contains": {
                    "type": "string"
                  }
                },
                "IncludeInHost": {
                  "type": "object",
                  "additionalProperties": false,
                  "properties": {
                    "Product": {
                      "type": "boolean"
                    },
                    "Environment": {
                      "type": "boolean"
                    },
                    "Segment": {
                      "type": "boolean"
                    },
                    "Tier": {
                      "type": "boolean"
                    },
                    "Component": {
                      "type": "boolean"
                    },
                    "Instance": {
                      "type": "boolean"
                    },
                    "Version": {
                      "type": "boolean"
                    },
                    "Host": {
                      "type": "boolean"
                    }
                  }
                },
                "External": {
                  "type": "boolean"
                },
                "Wildcard": {
                  "type": "boolean"
                }
              }
            },
            "AssumeSNI": {
              "type": "boolean",
              "default": true
            },
            "Profiles": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "Deployment": {
                  "type": "array",
                  "contains": {
                    "type": "string"
                  }
                },
                "Policy": {
                  "type": "array",
                  "contains": {
                    "type": "string"
                  }
                },
                "Placement": {
                  "type": "string",
                  "default": "default"
                },
                "Baseline": {
                  "type": "string",
                  "description": "The profile used to lookup standard services provided by the segment baseline",
                  "default": "default"
                },
                "Testing": {
                  "type": "array",
                  "contains": {
                    "type": "string"
                  },
                  "description": "The testing profiles to apply to the component"
                },
                "Security": {
                  "type": "string",
                  "default": "default"
                }
              }
            },
            "SettingNamespaces": {
              "type": "object",
              "description": "Additional namespaces to use during settings lookups",
              "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": {
                  "properties": {
                    "Match": {
                      "type": "string",
                      "description": "How to match the namespace with available settings",
                      "default": "exact",
                      "enum": [
                        "exact",
                        "partial"
                      ]
                    },
                    "Order": {
                      "type": "array",
                      "contains": {
                        "type": "string"
                      },
                      "default": [
                        "Tier",
                        "Component",
                        "Type",
                        "SubComponent",
                        "Instance",
                        "Version",
                        "Name"
                      ]
                    },
                    "IncludeInNamespace": {
                      "type": "object",
                      "additionalProperties": false,
                      "properties": {
                        "Tier": {
                          "type": "boolean",
                          "default": true
                        },
                        "Component": {
                          "type": "boolean",
                          "default": true
                        },
                        "Type": {
                          "type": "boolean",
                          "default": false
                        },
                        "SubComponent": {
                          "type": "boolean",
                          "default": false
                        },
                        "Instance": {
                          "type": "boolean",
                          "default": true
                        },
                        "Version": {
                          "type": "boolean",
                          "default": true
                        },
                        "Name": {
                          "type": "boolean",
                          "default": false
                        }
                      }
                    },
                    "Name": {
                      "type": "string"
                    }
                  },
                  "additionalProperties": false
                }
              }
            },
            "Export": {
              "type": "array",
              "contains": {
                "type": "string"
              }
            },
            "DeploymentUnits": {
              "type": "array",
              "contains": {
                "type": "string"
              }
            },
            "Routes": {
              "$ref": "https://docs.hamlet.io/schema/latest/blueprint/schema-component-cdnroute-schema.json"
            }
          },
          "additionalProperties": false
        }
      }
    }
  }
}
