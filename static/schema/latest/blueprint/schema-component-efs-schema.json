{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "$id": "https://docs.hamlet.io/schema/latest/blueprint/schema-component-efs-schema.json",
  "definitions": {
    "efs": {
      "type": "object",
      "patternProperties": {
        "^[A-Za-z_][A-Za-z0-9_]*$": {
          "properties": {
            "Encrypted": {
              "type": "boolean",
              "default": true
            },
            "IPAddressGroups": {
              "type": "array",
              "contains": {
                "type": "string"
              },
              "default": [
                "_localnet"
              ]
            },
            "Links": {
              "$ref": "https://docs.hamlet.io/schema/latest/blueprint/schema-attributeset-link-schema.json"
            },
            "Profiles": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "Deployment": {
                  "type": "array",
                  "contains": {
                    "type": "string"
                  }
                },
                "Policy": {
                  "type": "array",
                  "contains": {
                    "type": "string"
                  }
                },
                "Placement": {
                  "type": "string",
                  "default": "default"
                },
                "Baseline": {
                  "type": "string",
                  "description": "The profile used to lookup standard services provided by the segment baseline",
                  "default": "default"
                },
                "Testing": {
                  "type": "array",
                  "contains": {
                    "type": "string"
                  },
                  "description": "The testing profiles to apply to the component"
                },
                "Network": {
                  "type": "string",
                  "default": "default"
                }
              }
            },
            "SettingNamespaces": {
              "type": "object",
              "description": "Additional namespaces to use during settings lookups",
              "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": {
                  "properties": {
                    "Match": {
                      "type": "string",
                      "description": "How to match the namespace with available settings",
                      "default": "exact",
                      "enum": [
                        "exact",
                        "partial"
                      ]
                    },
                    "Order": {
                      "type": "array",
                      "contains": {
                        "type": "string"
                      },
                      "default": [
                        "Tier",
                        "Component",
                        "Type",
                        "SubComponent",
                        "Instance",
                        "Version",
                        "Name"
                      ]
                    },
                    "IncludeInNamespace": {
                      "type": "object",
                      "additionalProperties": false,
                      "properties": {
                        "Tier": {
                          "type": "boolean",
                          "default": true
                        },
                        "Component": {
                          "type": "boolean",
                          "default": true
                        },
                        "Type": {
                          "type": "boolean",
                          "default": false
                        },
                        "SubComponent": {
                          "type": "boolean",
                          "default": false
                        },
                        "Instance": {
                          "type": "boolean",
                          "default": true
                        },
                        "Version": {
                          "type": "boolean",
                          "default": true
                        },
                        "Name": {
                          "type": "boolean",
                          "default": false
                        }
                      }
                    },
                    "Name": {
                      "type": "string"
                    }
                  },
                  "additionalProperties": false
                }
              }
            },
            "Export": {
              "type": "array",
              "contains": {
                "type": "string"
              }
            },
            "DeploymentUnits": {
              "type": "array",
              "contains": {
                "type": "string"
              }
            },
            "aws:IAMRequired": {
              "type": "boolean",
              "description": "Require IAM Access to EFS",
              "default": false
            },
            "Mounts": {
              "$ref": "https://docs.hamlet.io/schema/latest/blueprint/schema-component-efsmount-schema.json"
            }
          },
          "additionalProperties": false
        }
      }
    }
  }
}
