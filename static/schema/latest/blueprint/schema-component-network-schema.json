{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "$id": "https://docs.hamlet.io/schema/latest/blueprint/schema-component-network-schema.json",
  "definitions": {
    "network": {
      "type": "object",
      "patternProperties": {
        "^[A-Za-z_][A-Za-z0-9_]*$": {
          "properties": {
            "Active": {
              "type": "boolean",
              "default": false
            },
            "Logging": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "FlowLogs": {
                  "type": "object",
                  "description": "Log flows across the network",
                  "patternProperties": {
                    "^[A-Za-z_][A-Za-z0-9_]*$": {
                      "properties": {
                        "Action": {
                          "type": "string",
                          "description": "The action to capture in the flow log",
                          "enum": [
                            "accept",
                            "reject",
                            "any"
                          ]
                        },
                        "DestinationType": {
                          "type": "string",
                          "description": "The destination type to send the logs to",
                          "default": "s3",
                          "enum": [
                            "log",
                            "s3"
                          ]
                        },
                        "s3": {
                          "type": "object",
                          "additionalProperties": false,
                          "description": "s3 specific destination configuration",
                          "properties": {
                            "Link": {
                              "$ref": "https://docs.hamlet.io/schema/latest/blueprint/schema-attributeset-link-schema.json",
                              "description": "A link to the s3 bucket destination"
                            },
                            "Prefix": {
                              "type": "string",
                              "description": "A prefix for the s3 bucket destination",
                              "default": "FlowLogs/"
                            }
                          }
                        }
                      },
                      "additionalProperties": false,
                      "required": [
                        "Action"
                      ]
                    }
                  }
                }
              }
            },
            "DNS": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "UseProvider": {
                  "type": "boolean",
                  "default": true
                },
                "GenerateHostNames": {
                  "type": "boolean",
                  "default": true
                }
              }
            },
            "Address": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "CIDR": {
                  "type": "string",
                  "default": "10.0.0.0/16"
                }
              }
            },
            "Links": {
              "$ref": "https://docs.hamlet.io/schema/latest/blueprint/schema-attributeset-link-schema.json"
            },
            "Profiles": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "Deployment": {
                  "type": "array",
                  "contains": {
                    "type": "string"
                  }
                },
                "Policy": {
                  "type": "array",
                  "contains": {
                    "type": "string"
                  }
                },
                "Placement": {
                  "type": "string",
                  "default": "default"
                },
                "Baseline": {
                  "type": "string",
                  "description": "The profile used to lookup standard services provided by the segment baseline",
                  "default": "default"
                },
                "Testing": {
                  "type": "array",
                  "contains": {
                    "type": "string"
                  },
                  "description": "The testing profiles to apply to the component"
                },
                "Logging": {
                  "type": "string",
                  "default": "default"
                }
              }
            },
            "SettingNamespaces": {
              "type": "object",
              "description": "Additional namespaces to use during settings lookups",
              "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": {
                  "properties": {
                    "Match": {
                      "type": "string",
                      "description": "How to match the namespace with available settings",
                      "default": "exact",
                      "enum": [
                        "exact",
                        "partial"
                      ]
                    },
                    "Order": {
                      "type": "array",
                      "contains": {
                        "type": "string"
                      },
                      "default": [
                        "Tier",
                        "Component",
                        "Type",
                        "SubComponent",
                        "Instance",
                        "Version",
                        "Name"
                      ]
                    },
                    "IncludeInNamespace": {
                      "type": "object",
                      "additionalProperties": false,
                      "properties": {
                        "Tier": {
                          "type": "boolean",
                          "default": true
                        },
                        "Component": {
                          "type": "boolean",
                          "default": true
                        },
                        "Type": {
                          "type": "boolean",
                          "default": false
                        },
                        "SubComponent": {
                          "type": "boolean",
                          "default": false
                        },
                        "Instance": {
                          "type": "boolean",
                          "default": true
                        },
                        "Version": {
                          "type": "boolean",
                          "default": true
                        },
                        "Name": {
                          "type": "boolean",
                          "default": false
                        }
                      }
                    },
                    "Name": {
                      "type": "string"
                    }
                  },
                  "additionalProperties": false
                }
              }
            },
            "Export": {
              "type": "array",
              "contains": {
                "type": "string"
              }
            },
            "DeploymentUnits": {
              "type": "array",
              "contains": {
                "type": "string"
              }
            },
            "RouteTables": {
              "$ref": "https://docs.hamlet.io/schema/latest/blueprint/schema-component-networkroute-schema.json"
            },
            "NetworkACLs": {
              "$ref": "https://docs.hamlet.io/schema/latest/blueprint/schema-component-networkacl-schema.json"
            }
          },
          "additionalProperties": false
        }
      }
    }
  }
}
