{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "$id": "https://docs.hamlet.io/schema/latest/blueprint/schema-component-ec2-schema.json",
  "definitions": {
    "ec2": {
      "type": "object",
      "patternProperties": {
        "^[A-Za-z_][A-Za-z0-9_]*$": {
          "properties": {
            "FixedIP": {
              "type": "boolean",
              "default": false
            },
            "DockerHost": {
              "type": "boolean",
              "default": false
            },
            "Extensions": {
              "type": "array",
              "contains": {
                "type": "string"
              },
              "description": "Extensions to invoke as part of component processing"
            },
            "Links": {
              "$ref": "https://docs.hamlet.io/schema/latest/blueprint/schema-attributeset-link-schema.json"
            },
            "Ports": {
              "type": "object",
              "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": {
                  "properties": {
                    "IPAddressGroups": {
                      "type": "array",
                      "contains": {
                        "type": "string"
                      }
                    },
                    "LB": {
                      "type": "object",
                      "additionalProperties": false,
                      "properties": {
                        "Tier": {
                          "type": "string"
                        },
                        "Component": {
                          "type": "string"
                        },
                        "LinkName": {
                          "type": "string",
                          "default": "lb"
                        },
                        "Instance": {
                          "type": "string"
                        },
                        "Version": {
                          "type": "string"
                        },
                        "PortMapping": {
                          "type": "string"
                        }
                      },
                      "required": [
                        "Tier",
                        "Component"
                      ]
                    }
                  },
                  "additionalProperties": false
                }
              }
            },
            "Role": {
              "type": "string",
              "description": "Server configuration role"
            },
            "OSPatching": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "Enabled": {
                  "type": "boolean",
                  "description": "Enable automatic OS Patching",
                  "default": true
                },
                "Schedule": {
                  "type": "string",
                  "description": "UTC based cron schedule to apply updates",
                  "default": "59 13 * * *"
                },
                "SecurityOnly": {
                  "type": "boolean",
                  "description": "Only apply security updates",
                  "default": false
                }
              }
            },
            "Profiles": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "Deployment": {
                  "type": "array",
                  "contains": {
                    "type": "string"
                  }
                },
                "Policy": {
                  "type": "array",
                  "contains": {
                    "type": "string"
                  }
                },
                "Placement": {
                  "type": "string",
                  "default": "default"
                },
                "Baseline": {
                  "type": "string",
                  "description": "The profile used to lookup standard services provided by the segment baseline",
                  "default": "default"
                },
                "Testing": {
                  "type": "array",
                  "contains": {
                    "type": "string"
                  },
                  "description": "The testing profiles to apply to the component"
                },
                "Processor": {
                  "type": "string",
                  "default": "default"
                },
                "Network": {
                  "type": "string",
                  "default": "default"
                },
                "Logging": {
                  "type": "string",
                  "default": "default"
                }
              }
            },
            "SettingNamespaces": {
              "type": "object",
              "description": "Additional namespaces to use during settings lookups",
              "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": {
                  "properties": {
                    "Match": {
                      "type": "string",
                      "description": "How to match the namespace with available settings",
                      "default": "exact",
                      "enum": [
                        "exact",
                        "partial"
                      ]
                    },
                    "Order": {
                      "type": "array",
                      "contains": {
                        "type": "string"
                      },
                      "default": [
                        "Tier",
                        "Component",
                        "Type",
                        "SubComponent",
                        "Instance",
                        "Version",
                        "Name"
                      ]
                    },
                    "IncludeInNamespace": {
                      "type": "object",
                      "additionalProperties": false,
                      "properties": {
                        "Tier": {
                          "type": "boolean",
                          "default": true
                        },
                        "Component": {
                          "type": "boolean",
                          "default": true
                        },
                        "Type": {
                          "type": "boolean",
                          "default": false
                        },
                        "SubComponent": {
                          "type": "boolean",
                          "default": false
                        },
                        "Instance": {
                          "type": "boolean",
                          "default": true
                        },
                        "Version": {
                          "type": "boolean",
                          "default": true
                        },
                        "Name": {
                          "type": "boolean",
                          "default": false
                        }
                      }
                    },
                    "Name": {
                      "type": "string"
                    }
                  },
                  "additionalProperties": false
                }
              }
            },
            "Export": {
              "type": "array",
              "contains": {
                "type": "string"
              }
            },
            "Instances": {
              "type": "object",
              "description": "Instances of a component configuration",
              "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": {
                  "properties": {
                    "Versions": {
                      "type": "object",
                      "description": "Versions of the components instance.",
                      "patternProperties": {
                        "^[A-Za-z_][A-Za-z0-9_]*$": {
                          "properties": {
                            "DeploymentUnits": {
                              "type": "array",
                              "contains": {
                                "type": "string"
                              },
                              "description": "An singleton instance of the component, Instance & Version configuration."
                            }
                          },
                          "additionalProperties": false
                        }
                      }
                    },
                    "DeploymentUnits": {
                      "type": "array",
                      "contains": {
                        "type": "string"
                      },
                      "description": "An singleton instance of the component, Instance & Version configuration."
                    }
                  },
                  "additionalProperties": false
                }
              }
            },
            "DeploymentUnits": {
              "type": "array",
              "contains": {
                "type": "string"
              },
              "description": "An singleton instance of the component, Instance & Version configuration."
            }
          },
          "additionalProperties": false
        }
      }
    }
  }
}
