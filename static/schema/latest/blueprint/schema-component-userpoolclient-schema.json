{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "$id": "https://hamlet.io/schema/latest/blueprint/component-userpoolclient-schema.json",
  "definitions": {
    "userpoolclient": {
      "type": "object",
      "patternProperties": {
        "^[A-Za-z_][A-Za-z0-9_]*$": {
          "properties": {
            "OAuth": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "Scopes": {
                  "type": "array",
                  "contains": {
                    "type": "string"
                  },
                  "default": [
                    "email",
                    "openid"
                  ],
                  "enum": [
                    "phone",
                    "email",
                    "openid",
                    "aws.cognito.signin.user.admin",
                    "profile"
                  ]
                },
                "Flows": {
                  "type": "array",
                  "contains": {
                    "type": "string"
                  },
                  "default": [
                    "code"
                  ],
                  "enum": [
                    "code",
                    "implicit",
                    "client_credentials"
                  ]
                },
                "Enabled": {
                  "type": "boolean",
                  "default": true
                }
              }
            },
            "ClientGenerateSecret": {
              "type": "boolean",
              "description": "Generate a client secret which musht be provided in auth calls",
              "default": false
            },
            "EncryptionScheme": {
              "type": "string",
              "description": "A prefix appended to attributes to show encryption status"
            },
            "ClientTokenValidity": {
              "type": "number",
              "description": "Time in days that the refresh token is valid for",
              "default": 30
            },
            "AuthProviders": {
              "type": "array",
              "contains": {
                "type": "string"
              },
              "description": "A list of user pool auth providers which can use this client",
              "default": [
                "COGNITO"
              ]
            },
            "ResourceScopes": {
              "type": "object",
              "description": "Resources that the client is permitted to access",
              "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": {
                  "properties": {
                    "Name": {
                      "type": "string",
                      "description": "The name of a userpool resource configured for this pool"
                    },
                    "Scopes": {
                      "type": "array",
                      "contains": {
                        "type": "string"
                      },
                      "description": "A list of scopes that the resource offers"
                    }
                  },
                  "additionalProperties": false,
                  "required": [
                    "Name",
                    "Scopes"
                  ]
                }
              }
            },
            "Links": {
              "type": "object",
              "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": {
                  "properties": {
                    "Any": {
                      "type": "string"
                    },
                    "Tenant": {
                      "type": "string"
                    },
                    "Product": {
                      "type": "string"
                    },
                    "Environment": {
                      "type": "string"
                    },
                    "Segment": {
                      "type": "string"
                    },
                    "Tier": {
                      "type": "string"
                    },
                    "Component": {
                      "type": "string"
                    },
                    "Function": {
                      "type": "string"
                    },
                    "Service": {
                      "type": "string"
                    },
                    "Task": {
                      "type": "string"
                    },
                    "PortMapping": {
                      "type": "string"
                    },
                    "Mount": {
                      "type": "string"
                    },
                    "Platform": {
                      "type": "string"
                    },
                    "RouteTable": {
                      "type": "string"
                    },
                    "NetworkACL": {
                      "type": "string"
                    },
                    "DataBucket": {
                      "type": "string"
                    },
                    "Key": {
                      "type": "string"
                    },
                    "Branch": {
                      "type": "string"
                    },
                    "Client": {
                      "type": "string"
                    },
                    "Connection": {
                      "type": "string"
                    },
                    "AuthProvider": {
                      "type": "string"
                    },
                    "Resource": {
                      "type": "string"
                    },
                    "DataFeed": {
                      "type": "string"
                    },
                    "RegistryService": {
                      "type": "string"
                    },
                    "Assignment": {
                      "type": "string"
                    },
                    "Route": {
                      "type": "string"
                    },
                    "Endpoint": {
                      "type": "string"
                    },
                    "Instance": {
                      "type": "string"
                    },
                    "Version": {
                      "type": "string"
                    },
                    "Secret": {
                      "type": "string"
                    },
                    "Rule": {
                      "type": "string"
                    },
                    "Role": {
                      "type": "string"
                    },
                    "Direction": {
                      "type": "string"
                    },
                    "Type": {
                      "type": "string"
                    },
                    "Enabled": {
                      "type": "boolean",
                      "default": true
                    },
                    "IncludeInContext": {
                      "type": "array",
                      "contains": {
                        "type": "string"
                      }
                    }
                  },
                  "additionalProperties": false,
                  "required": [
                    "Tier",
                    "Component"
                  ]
                }
              }
            },
            "Profiles": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "Deployment": {
                  "type": "array",
                  "contains": {
                    "type": "string"
                  }
                },
                "Policy": {
                  "type": "array",
                  "contains": {
                    "type": "string"
                  }
                },
                "Placement": {
                  "type": "string",
                  "default": "default"
                },
                "Baseline": {
                  "type": "string",
                  "description": "The profile used to lookup standard services provided by the segment baseline",
                  "default": "default"
                },
                "Testing": {
                  "type": "array",
                  "contains": {
                    "type": "string"
                  },
                  "description": "The testing profiles to apply to the component"
                }
              }
            },
            "SettingNamespaces": {
              "type": "object",
              "description": "Additional namespaces to use during settings lookups",
              "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": {
                  "properties": {
                    "Match": {
                      "type": "string",
                      "description": "How to match the namespace with available settings",
                      "default": "exact",
                      "enum": [
                        "exact",
                        "partial"
                      ]
                    },
                    "Order": {
                      "type": "array",
                      "contains": {
                        "type": "string"
                      },
                      "default": [
                        "Tier",
                        "Component",
                        "Type",
                        "SubComponent",
                        "Instance",
                        "Version",
                        "Name"
                      ]
                    },
                    "IncludeInNamespace": {
                      "type": "object",
                      "additionalProperties": false,
                      "properties": {
                        "Tier": {
                          "type": "boolean",
                          "default": true
                        },
                        "Component": {
                          "type": "boolean",
                          "default": true
                        },
                        "Type": {
                          "type": "boolean",
                          "default": false
                        },
                        "SubComponent": {
                          "type": "boolean",
                          "default": false
                        },
                        "Instance": {
                          "type": "boolean",
                          "default": true
                        },
                        "Version": {
                          "type": "boolean",
                          "default": true
                        },
                        "Name": {
                          "type": "boolean",
                          "default": false
                        }
                      }
                    },
                    "Name": {
                      "type": "string"
                    }
                  },
                  "additionalProperties": false
                }
              }
            },
            "Export": {
              "type": "array",
              "contains": {
                "type": "string"
              }
            },
            "DeploymentUnits": {
              "type": "array",
              "contains": {
                "type": "string"
              }
            }
          },
          "additionalProperties": false
        }
      }
    }
  }
}
