{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "$id": "https://docs.hamlet.io/schema/latest/blueprint/schema-component-topicsubscription-schema.json",
  "definitions": {
    "topicsubscription": {
      "type": "object",
      "patternProperties": {
        "^[A-Za-z_][A-Za-z0-9_]*$": {
          "properties": {
            "Links": {
              "$ref": "https://docs.hamlet.io/schema/latest/blueprint/schema-attributeset-link-schema.json"
            },
            "DeliveryPolicy": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "RetryAttempts": {
                  "type": "number",
                  "description": "Total number of attempts to deliver the message",
                  "default": 10
                },
                "ImmediateRetryAttempts": {
                  "type": "number",
                  "description": "Number of attempts to perform without delay",
                  "default": 0
                },
                "AttemptsBeforeBackOff": {
                  "type": "number",
                  "description": "Number of attempts before activating backoff",
                  "default": 2
                },
                "AttemptsAfterBackOff": {
                  "type": "number",
                  "description": "Number of attempts once the backoff has reached its longest delay",
                  "default": 2
                },
                "MinimumDelay": {
                  "type": "number",
                  "description": "Minimum delay in seconds between attempts",
                  "default": 5
                },
                "MaximumDelay": {
                  "type": "number",
                  "description": "Maximum delay to apply using backoff",
                  "default": 900
                },
                "BackOffMode": {
                  "type": "string",
                  "description": "How to process the backoff extensions",
                  "default": "exponential",
                  "enum": [
                    "linear",
                    "arithmetic",
                    "geometric",
                    "exponential"
                  ]
                }
              }
            },
            "RawMessageDelivery": {
              "type": "boolean",
              "description": "Deliver message as received not with JSON payload strucutre",
              "default": false
            },
            "Profiles": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "Deployment": {
                  "type": "array",
                  "contains": {
                    "type": "string"
                  }
                },
                "Policy": {
                  "type": "array",
                  "contains": {
                    "type": "string"
                  }
                },
                "Placement": {
                  "type": "string",
                  "default": "default"
                },
                "Baseline": {
                  "type": "string",
                  "description": "The profile used to lookup standard services provided by the segment baseline",
                  "default": "default"
                },
                "Testing": {
                  "type": "array",
                  "contains": {
                    "type": "string"
                  },
                  "description": "The testing profiles to apply to the component"
                }
              }
            },
            "SettingNamespaces": {
              "type": "object",
              "description": "Additional namespaces to use during settings lookups",
              "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": {
                  "properties": {
                    "Match": {
                      "type": "string",
                      "description": "How to match the namespace with available settings",
                      "default": "exact",
                      "enum": [
                        "exact",
                        "partial"
                      ]
                    },
                    "Order": {
                      "type": "array",
                      "contains": {
                        "type": "string"
                      },
                      "default": [
                        "Tier",
                        "Component",
                        "Type",
                        "SubComponent",
                        "Instance",
                        "Version",
                        "Name"
                      ]
                    },
                    "IncludeInNamespace": {
                      "type": "object",
                      "additionalProperties": false,
                      "properties": {
                        "Tier": {
                          "type": "boolean",
                          "default": true
                        },
                        "Component": {
                          "type": "boolean",
                          "default": true
                        },
                        "Type": {
                          "type": "boolean",
                          "default": false
                        },
                        "SubComponent": {
                          "type": "boolean",
                          "default": false
                        },
                        "Instance": {
                          "type": "boolean",
                          "default": true
                        },
                        "Version": {
                          "type": "boolean",
                          "default": true
                        },
                        "Name": {
                          "type": "boolean",
                          "default": false
                        }
                      }
                    },
                    "Name": {
                      "type": "string"
                    }
                  },
                  "additionalProperties": false
                }
              }
            },
            "Export": {
              "type": "array",
              "contains": {
                "type": "string"
              }
            },
            "Instances": {
              "type": "object",
              "description": "Instances of a component configuration",
              "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": {
                  "properties": {
                    "Versions": {
                      "type": "object",
                      "description": "Versions of the components instance.",
                      "patternProperties": {
                        "^[A-Za-z_][A-Za-z0-9_]*$": {
                          "properties": {
                            "DeploymentUnits": {
                              "type": "array",
                              "contains": {
                                "type": "string"
                              },
                              "description": "An singleton instance of the component, Instance & Version configuration."
                            }
                          },
                          "additionalProperties": false
                        }
                      }
                    },
                    "DeploymentUnits": {
                      "type": "array",
                      "contains": {
                        "type": "string"
                      },
                      "description": "An singleton instance of the component, Instance & Version configuration."
                    }
                  },
                  "additionalProperties": false
                }
              }
            },
            "DeploymentUnits": {
              "type": "array",
              "contains": {
                "type": "string"
              },
              "description": "An singleton instance of the component, Instance & Version configuration."
            }
          },
          "additionalProperties": false
        }
      }
    }
  }
}
