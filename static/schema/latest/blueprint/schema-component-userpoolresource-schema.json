{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "$id": "https://docs.hamlet.io/schema/latest/blueprint/schema-component-userpoolresource-schema.json",
  "definitions": {
    "userpoolresource": {
      "type": "object",
      "patternProperties": {
        "^[A-Za-z_][A-Za-z0-9_]*$": {
          "properties": {
            "Server": {
              "type": "object",
              "additionalProperties": false,
              "description": "The endpoint of the resource",
              "properties": {
                "Link": {
                  "$ref": "https://docs.hamlet.io/schema/latest/blueprint/schema-attributeset-link-schema.json",
                  "description": "A link to the server resource represented by this resource"
                },
                "LinkAttribute": {
                  "type": "string",
                  "description": "The link targets attribute which defines the url",
                  "default": "URL"
                },
                "UseProvidedScopes": {
                  "type": "boolean",
                  "description": "Use Scopes provided by the server component if available",
                  "default": true
                }
              },
              "required": [
                "Link"
              ]
            },
            "Scopes": {
              "type": "object",
              "description": "The access scopes offered by the server",
              "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": {
                  "properties": {
                    "Name": {
                      "type": "string",
                      "description": "The name of the scope which is passed to the server"
                    },
                    "Description": {
                      "type": "string",
                      "description": "A short description of the scope and what it does"
                    }
                  },
                  "additionalProperties": false
                }
              }
            },
            "Profiles": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "Deployment": {
                  "type": "array",
                  "contains": {
                    "type": "string"
                  }
                },
                "Policy": {
                  "type": "array",
                  "contains": {
                    "type": "string"
                  }
                },
                "Placement": {
                  "type": "string",
                  "default": "default"
                },
                "Baseline": {
                  "type": "string",
                  "description": "The profile used to lookup standard services provided by the segment baseline",
                  "default": "default"
                },
                "Testing": {
                  "type": "array",
                  "contains": {
                    "type": "string"
                  },
                  "description": "The testing profiles to apply to the component"
                }
              }
            },
            "SettingNamespaces": {
              "type": "object",
              "description": "Additional namespaces to use during settings lookups",
              "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": {
                  "properties": {
                    "Match": {
                      "type": "string",
                      "description": "How to match the namespace with available settings",
                      "default": "exact",
                      "enum": [
                        "exact",
                        "partial"
                      ]
                    },
                    "Order": {
                      "type": "array",
                      "contains": {
                        "type": "string"
                      },
                      "default": [
                        "Tier",
                        "Component",
                        "Type",
                        "SubComponent",
                        "Instance",
                        "Version",
                        "Name"
                      ]
                    },
                    "IncludeInNamespace": {
                      "type": "object",
                      "additionalProperties": false,
                      "properties": {
                        "Tier": {
                          "type": "boolean",
                          "default": true
                        },
                        "Component": {
                          "type": "boolean",
                          "default": true
                        },
                        "Type": {
                          "type": "boolean",
                          "default": false
                        },
                        "SubComponent": {
                          "type": "boolean",
                          "default": false
                        },
                        "Instance": {
                          "type": "boolean",
                          "default": true
                        },
                        "Version": {
                          "type": "boolean",
                          "default": true
                        },
                        "Name": {
                          "type": "boolean",
                          "default": false
                        }
                      }
                    },
                    "Name": {
                      "type": "string"
                    }
                  },
                  "additionalProperties": false
                }
              }
            },
            "Export": {
              "type": "array",
              "contains": {
                "type": "string"
              }
            },
            "DeploymentUnits": {
              "type": "array",
              "contains": {
                "type": "string"
              }
            }
          },
          "additionalProperties": false,
          "required": [
            "Server"
          ]
        }
      }
    }
  }
}
