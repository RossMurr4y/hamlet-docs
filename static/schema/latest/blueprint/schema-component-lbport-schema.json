{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "$id": "https://hamlet.io/schema/latest/blueprint/component-lbport-schema.json",
  "definitions": {
    "lbport": {
      "type": "object",
      "patternProperties": {
        "^[A-Za-z_][A-Za-z0-9_]*$": {
          "properties": {
            "IPAddressGroups": {
              "type": "array",
              "contains": {
                "type": "string"
              },
              "default": [
                "_localnet"
              ]
            },
            "Certificate": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "Qualifiers": {
                  "type": "object"
                },
                "Domain": {
                  "type": "string"
                },
                "IncludeInDomain": {
                  "type": "object",
                  "additionalProperties": false,
                  "properties": {
                    "Product": {
                      "type": "boolean"
                    },
                    "Environment": {
                      "type": "boolean"
                    },
                    "Segment": {
                      "type": "boolean"
                    }
                  }
                },
                "Host": {
                  "type": "string"
                },
                "HostParts": {
                  "type": "array",
                  "contains": {
                    "type": "string"
                  }
                },
                "IncludeInHost": {
                  "type": "object",
                  "additionalProperties": false,
                  "properties": {
                    "Product": {
                      "type": "boolean"
                    },
                    "Environment": {
                      "type": "boolean"
                    },
                    "Segment": {
                      "type": "boolean"
                    },
                    "Tier": {
                      "type": "boolean"
                    },
                    "Component": {
                      "type": "boolean"
                    },
                    "Instance": {
                      "type": "boolean"
                    },
                    "Version": {
                      "type": "boolean"
                    },
                    "Host": {
                      "type": "boolean"
                    }
                  }
                },
                "External": {
                  "type": "boolean"
                },
                "Wildcard": {
                  "type": "boolean"
                }
              }
            },
            "HostFilter": {
              "type": "boolean",
              "default": false
            },
            "Mapping": {
              "type": "string"
            },
            "Path": {
              "type": "string",
              "default": "default"
            },
            "Priority": {
              "type": "number",
              "default": 100
            },
            "Links": {
              "$ref": "https://hamlet.io/schema/latest/blueprint/schema-attributeset-schema.json#/link"
            },
            "Authentication": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "SessionCookieName": {
                  "type": "string",
                  "default": "AWSELBAuthSessionCookie"
                },
                "SessionTimeout": {
                  "type": "number",
                  "default": 604800
                }
              }
            },
            "Redirect": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "Protocol": {
                  "type": "string",
                  "default": "HTTPS",
                  "enum": [
                    "HTTPS",
                    "#{protocol}"
                  ]
                },
                "Port": {
                  "type": "string",
                  "default": "443"
                },
                "Host": {
                  "type": "string",
                  "default": "#{host}"
                },
                "Path": {
                  "type": "string",
                  "default": "/#{path}"
                },
                "Query": {
                  "type": "string",
                  "default": "#{query}"
                },
                "Permanent": {
                  "type": "boolean",
                  "default": true
                }
              }
            },
            "Fixed": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "Message": {
                  "type": "string",
                  "default": "This application is currently unavailable. Please try again later."
                },
                "ContentType": {
                  "type": "string",
                  "default": "text/plain"
                },
                "StatusCode": {
                  "type": "string",
                  "default": "404"
                }
              }
            },
            "Forward": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "TargetType": {
                  "type": "string",
                  "default": "instance",
                  "enum": [
                    "instance",
                    "ip"
                  ]
                },
                "SlowStartTime": {
                  "type": "number",
                  "default": -1
                },
                "StickinessTime": {
                  "type": "number",
                  "default": -1
                },
                "DeregistrationTimeout": {
                  "type": "number",
                  "default": 30
                },
                "StaticEndpoints": {
                  "type": "object",
                  "additionalProperties": false,
                  "description": "Static endpoints for the load balancing port",
                  "properties": {
                    "Links": {
                      "$ref": "https://hamlet.io/schema/latest/blueprint/schema-attributeset-schema.json#/link"
                    }
                  }
                }
              }
            },
            "Profiles": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "Deployment": {
                  "type": "array",
                  "contains": {
                    "type": "string"
                  }
                },
                "Policy": {
                  "type": "array",
                  "contains": {
                    "type": "string"
                  }
                },
                "Placement": {
                  "type": "string",
                  "default": "default"
                },
                "Baseline": {
                  "type": "string",
                  "description": "The profile used to lookup standard services provided by the segment baseline",
                  "default": "default"
                },
                "Testing": {
                  "type": "array",
                  "contains": {
                    "type": "string"
                  },
                  "description": "The testing profiles to apply to the component"
                },
                "Network": {
                  "type": "string",
                  "default": "default"
                }
              }
            },
            "SettingNamespaces": {
              "type": "object",
              "description": "Additional namespaces to use during settings lookups",
              "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": {
                  "properties": {
                    "Match": {
                      "type": "string",
                      "description": "How to match the namespace with available settings",
                      "default": "exact",
                      "enum": [
                        "exact",
                        "partial"
                      ]
                    },
                    "Order": {
                      "type": "array",
                      "contains": {
                        "type": "string"
                      },
                      "default": [
                        "Tier",
                        "Component",
                        "Type",
                        "SubComponent",
                        "Instance",
                        "Version",
                        "Name"
                      ]
                    },
                    "IncludeInNamespace": {
                      "type": "object",
                      "additionalProperties": false,
                      "properties": {
                        "Tier": {
                          "type": "boolean",
                          "default": true
                        },
                        "Component": {
                          "type": "boolean",
                          "default": true
                        },
                        "Type": {
                          "type": "boolean",
                          "default": false
                        },
                        "SubComponent": {
                          "type": "boolean",
                          "default": false
                        },
                        "Instance": {
                          "type": "boolean",
                          "default": true
                        },
                        "Version": {
                          "type": "boolean",
                          "default": true
                        },
                        "Name": {
                          "type": "boolean",
                          "default": false
                        }
                      }
                    },
                    "Name": {
                      "type": "string"
                    }
                  },
                  "additionalProperties": false
                }
              }
            },
            "Export": {
              "type": "array",
              "contains": {
                "type": "string"
              }
            },
            "DeploymentUnits": {
              "type": "array",
              "contains": {
                "type": "string"
              }
            }
          },
          "additionalProperties": false
        }
      }
    }
  }
}
