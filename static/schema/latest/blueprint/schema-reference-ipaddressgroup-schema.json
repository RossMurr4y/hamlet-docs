{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "$id": "https://hamlet.io/schema/latest/blueprint/reference-ipaddressgroup-schema.json",
  "definitions": {
    "IPAddressGroup": {
      "type": "object",
      "patternProperties": {
        "^[A-Za-z_][A-Za-z0-9_]*$": {
          "properties": {
            "CIDR": {
              "type": "array",
              "contains": {
                "type": "string"
              }
            },
            "Description": {
              "type": "string"
            },
            "IsOpen": {
              "type": "boolean"
            }
          },
          "additionalProperties": false
        }
      }
    }
  }
}
